{%- style -%}
  .video-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    margin: {{ section.settings.margin_top }}px {{ section.settings.margin_right }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_left }}px;
  }

  .video-carousel__container {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  .video-carousel__slide {
    flex: 0 0 calc(100% / {{ section.settings.items_per_row }});
    padding: 0 {{ section.settings.gap | divided_by: 2 }}px;
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
  }

  .video-carousel__slide-inner {
    position: relative;
    padding-bottom: {{ section.settings.video_aspect_ratio }};
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
  }

  .video-carousel__slide iframe,
  .video-carousel__slide video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .video-carousel__controls {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 10px;
  }

  .video-carousel__button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: {{ section.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    border: none;
    padding: 0;
  }

  .video-carousel__button.active {
    opacity: 1;
  }

  .video-carousel__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.5);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .video-carousel__nav svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .video-carousel__nav--prev {
    left: 20px;
  }

  .video-carousel__nav--next {
    right: 20px;
  }

  /* Single item view for mobile */
  @media (max-width: 768px) {
    .video-carousel {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
      margin: {{ section.settings.mobile_margin_top }}px {{ section.settings.mobile_margin_right }}px {{ section.settings.mobile_margin_bottom }}px {{ section.settings.mobile_margin_left }}px;
    }

    .video-carousel__slide {
      flex: 0 0 100%;
      padding: 0 {{ section.settings.mobile_gap | divided_by: 2 }}px;
    }

    .video-carousel__slide-inner {
      padding-bottom: {{ section.settings.mobile_video_aspect_ratio }};
    }

    .video-carousel__nav {
      width: 30px;
      height: 30px;
    }

    .video-carousel__nav svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Responsive items per row */
  @media (min-width: 769px) and (max-width: 1024px) {
    .video-carousel__slide {
      flex: 0 0 calc(100% / {{ section.settings.items_per_row_tablet }});
    }
  }
{%- endstyle -%}

<div class="video-carousel color-{{ section.settings.color_scheme }}">
  <div class="video-carousel__container" id="VideoCarousel-{{ section.id }}">
    {%- for block in section.blocks -%}
      <div class="video-carousel__slide" {{ block.shopify_attributes }}>
        <div class="video-carousel__slide-inner">
          {%- if block.settings.video_url.type == 'youtube' -%}
            <iframe
              src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?autoplay={{ section.settings.autoplay }}&mute={{ section.settings.mute }}&loop={{ section.settings.loop }}&controls={{ section.settings.controls }}&playsinline=1"
              allow="autoplay; encrypted-media"
              allowfullscreen
            ></iframe>
          {%- elsif block.settings.video_url.type == 'vimeo' -%}
            <iframe
              src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?autoplay={{ section.settings.autoplay }}&muted={{ section.settings.mute }}&loop={{ section.settings.loop }}&controls={{ section.settings.controls }}&playsinline=1"
              allow="autoplay; encrypted-media"
              allowfullscreen
            ></iframe>
          {%- elsif block.settings.uploaded_video != blank -%}
            <video
              {% if section.settings.autoplay %}
                autoplay
              {% endif %}
              {% if section.settings.mute %}
                muted
              {% endif %}
              {% if section.settings.loop %}
                loop
              {% endif %}
              {% if section.settings.controls %}
                controls
              {% endif %}
              playsinline
            >
              <source src="{{ block.settings.uploaded_video }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.settings.show_navigation -%}
    <button class="video-carousel__nav video-carousel__nav--prev" aria-label="Previous video">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/>
      </svg>
    </button>
    <button class="video-carousel__nav video-carousel__nav--next" aria-label="Next video">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
      </svg>
    </button>
  {%- endif -%}

  {%- if section.settings.show_pagination -%}
    <div class="video-carousel__controls">
      {%- for block in section.blocks -%}
        <button
          class="video-carousel__button {% if forloop.first %}active{% endif %}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('#VideoCarousel-{{ section.id }}');
    const slides = document.querySelectorAll('#VideoCarousel-{{ section.id }} .video-carousel__slide');
    const prevBtn = document.querySelector('.video-carousel__nav--prev');
    const nextBtn = document.querySelector('.video-carousel__nav--next');
    const dots = document.querySelectorAll('.video-carousel__button');
    let currentIndex = 0;
    const itemsPerRow = window.innerWidth > 1024 ? {{ section.settings.items_per_row }} : 
                        window.innerWidth > 768 ? {{ section.settings.items_per_row_tablet }} : 1;
    
    function updateCarousel() {
      const slideWidth = slides[0].offsetWidth;
      carousel.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
      
      if (dots.length > 0) {
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === currentIndex);
        });
      }
    }
    
    {% if section.settings.show_navigation %}
      prevBtn.addEventListener('click', () => {
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : Math.ceil(slides.length / itemsPerRow) - 1;
        updateCarousel();
      });
      
      nextBtn.addEventListener('click', () => {
        const maxIndex = Math.ceil(slides.length / itemsPerRow) - 1;
        currentIndex = (currentIndex < maxIndex) ? currentIndex + 1 : 0;
        updateCarousel();
      });
    {% endif %}
    
    {% if section.settings.show_pagination %}
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentIndex = index;
          updateCarousel();
        });
      });
    {% endif %}
    
    {% if section.settings.autoplay_carousel and section.settings.autoplay_delay > 0 %}
      let autoplayInterval = setInterval(() => {
        const maxIndex = Math.ceil(slides.length / itemsPerRow) - 1;
        currentIndex = (currentIndex < maxIndex) ? currentIndex + 1 : 0;
        updateCarousel();
      }, {{ section.settings.autoplay_delay | times: 1000 }});
      
      carousel.parentElement.addEventListener('mouseenter', () => {
        clearInterval(autoplayInterval);
      });
      
      carousel.parentElement.addEventListener('mouseleave', () => {
        autoplayInterval = setInterval(() => {
          const maxIndex = Math.ceil(slides.length / itemsPerRow) - 1;
          currentIndex = (currentIndex < maxIndex) ? currentIndex + 1 : 0;
          updateCarousel();
        }, {{ section.settings.autoplay_delay | times: 1000 }});
      });
    {% endif %}

    // Handle window resize
    window.addEventListener('resize', function() {
      updateCarousel();
    });
  });
</script>

