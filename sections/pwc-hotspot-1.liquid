              src="{{ block.settings.tooltip_image | image_url: width: 500 }}"
              alt="{{ block.settings.tooltip_image.alt | escape }}"
              loading="lazy"
              width="500"
              height="{{ 500 | divided_by: block.settings.tooltip_image.aspect_ratio | ceil }}"
            >
