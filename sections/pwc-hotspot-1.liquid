    {%- endfor -%}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
	const sectionId = '{{ section.id }}';
	const hotspots = document.querySelectorAll(`.pc-hotspot-point-{{section.id}}`);
	const tooltipCloseButtons = document.querySelectorAll(`.pc-hotspot-tooltip-{{section.id}} .pc-tooltip-close`);
	const imageWrapper = document.querySelector(`.pc-hotspot-image-wrapper-{{section.id}}`);

	function positionTooltip(hotspot, tooltip) {
		const hotspotRect = hotspot.getBoundingClientRect();
		const containerRect = imageWrapper.getBoundingClientRect();
		const tooltipWidth = tooltip.offsetWidth;
		const tooltipHeight = tooltip.offsetHeight;
		const hotspotX = hotspotRect.left - containerRect.left;
		const hotspotY = hotspotRect.top - containerRect.top;
		const hotspotRight = containerRect.width - (hotspotX + hotspot.offsetWidth);
		const hotspotBottom = containerRect.height - (hotspotY + hotspot.offsetHeight);
		const isMobile = window.innerWidth <= 749;
		if (isMobile) {
			tooltip.style.left = '50%';
			tooltip.style.top = 'auto';
			tooltip.style.bottom = '20px';
			tooltip.style.transform = 'translateX(-50%)';
			return;
		}
		let newLeft, newTop;
		if (hotspotX > containerRect.width / 2) {
			newLeft = hotspotX - tooltipWidth - 15;
		} else {
			newLeft = hotspotX + hotspot.offsetWidth + 15;
		}
		if (hotspotY > containerRect.height / 2) {
			newTop = hotspotY - tooltipHeight - 15;
		} else {
			newTop = hotspotY + hotspot.offsetHeight + 15;
		}
		newLeft = Math.max(15, newLeft);
		newLeft = Math.min(newLeft, containerRect.width - tooltipWidth - 15);
		newTop = Math.max(15, newTop);
		newTop = Math.min(newTop, containerRect.height - tooltipHeight - 15);
		tooltip.style.left = `${newLeft}px`;
		tooltip.style.top = `${newTop}px`;
	}
	hotspots.forEach(hotspot => {
		const tooltipId = hotspot.getAttribute('data-tooltip-id');
		const tooltip = document.getElementById(tooltipId);
		hotspot.addEventListener('mouseenter', () => {
			if (window.innerWidth > 749) {
				positionTooltip(hotspot, tooltip);
			}
		});
		hotspot.addEventListener('click', (e) => {
			e.stopPropagation();
			document.querySelectorAll(`.pc-hotspot-tooltip-${sectionId}`).forEach(t => {
				if (t !== tooltip) t.classList.remove('active');
			});
			tooltip.classList.toggle('active');
			positionTooltip(hotspot, tooltip);
		});
	});
	tooltipCloseButtons.forEach(button => {
		button.addEventListener('click', (e) => {
			e.stopPropagation();
			button.closest(`.pc-hotspot-tooltip-${sectionId}`).classList.remove('active');
		});
	});
	document.addEventListener('click', (e) => {
		if (!e.target.closest(`.pc-hotspot-point-${sectionId}`) && !e.target.closest(`.pc-hotspot-tooltip-${sectionId}`)) {
			document.querySelectorAll(`.pc-hotspot-tooltip-${sectionId}`).forEach(tooltip => {
				tooltip.classList.remove('active');
			});
		}
	});
	window.addEventListener('resize', function() {
		document.querySelectorAll(`.pc-hotspot-tooltip-${sectionId}.active`).forEach(tooltip => {
			const hotspotId = tooltip.id.replace('pc-hotspot-tooltip-', 'pc-hotspot-point-');
			const hotspot = document.getElementById(hotspotId);
			if (hotspot) {
				positionTooltip(hotspot, tooltip);
			}
		});
	});
});
</script>
