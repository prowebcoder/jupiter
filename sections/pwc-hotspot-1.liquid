{%- assign sid = '#shopify-section-' | append: section.id -%}

{%- style -%}
{{ sid }} .pc-hotspot-point-{{ section.id }}:hover + .pc-hotspot-tooltip-{{ section.id }} {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}
{{ sid }} .pc-hotspot-section-{{ section.id }} {
  position: relative;
  margin: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px auto {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px auto;
  max-width: {{ section.settings.max_width }}px;
  padding: 0 20px;
}
{{ sid }} .pc-hotspot-image-wrapper-{{ section.id }} {
  position: relative;
  width: 100%;
  border-radius: {{ section.settings.image_border_radius }}px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  contain: layout paint;
}
{{ sid }} .pc-hotspot-image-{{ section.id }} {
  display: block;
  width: 100%;
  height: auto;
  transition: transform 0.5s ease;
}
{{ sid }} .pc-hotspot-point-{{ section.id }} {
  position: absolute;
  width: {{ section.settings.hotspot_size }}px;
  height: {{ section.settings.hotspot_size }}px;
  border-radius: 50%;
  background-color: {{ section.settings.hotspot_color }};
  cursor: pointer;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 0 0 0 rgba({{ section.settings.hotspot_color | color_to_rgb | remove: 'rgb(' | remove: ')' }}, 0.4);
  z-index: 2;
  border: 2px solid white;
}
{{ sid }} .pc-hotspot-point-{{ section.id }}:hover {
  transform: translate(-50%, -50%) scale(1.3);
}
{{ sid }} .pc-hotspot-tooltip-{{ section.id }} {
  position: absolute;
  background: {{ section.settings.tooltip_background }};
  color: {{ section.settings.tooltip_text_color }};
  padding: {{ section.settings.tooltip_padding }}px;
  border-radius: {{ section.settings.tooltip_border_radius }}px;
  width: {{ section.settings.tooltip_width }}px;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  z-index: 10;
  font-size: {{ section.settings.tooltip_font_size }}px;
  box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  transform: translateY(20px);
  border: 1px solid rgba(0,0,0,0.05);
}
{{ sid }} .pc-hotspot-tooltip-{{ section.id }}.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}
{{ sid }} .pc-hotspot-tooltip-{{ section.id }} {
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), left 0.3s ease-out, top 0.3s ease-out;
}
{{ sid }} .pc-hotspot-tooltip-{{ section.id }} .pc-tooltip-close {
  position: absolute;
  top: 10px;
  right: 10px;
  cursor: pointer;
  font-size: 16px;
  color: {{ section.settings.tooltip_text_color }};
  opacity: 0.7;
  transition: opacity 0.2s ease;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0,0,0,0.05);
}
{{ sid }} .pc-hotspot-tooltip-image {
  margin-bottom: 16px;
  border-radius: {{ section.settings.tooltip_image_border_radius }}px;
  overflow: hidden;
}
{{ sid }} .pc-hotspot-tooltip-image img {
  width: 100%;
  height: auto;
  display: block;
}
{{ sid }} .pc-hotspot-tooltip-heading {
  margin: 0 0 12px 0;
  color: {{ section.settings.tooltip_heading_color }};
  font-size: {{ section.settings.tooltip_heading_size }}px;
  font-weight: {{ section.settings.tooltip_heading_weight }};
}
{{ sid }} .pc-hotspot-tooltip-content {
  margin-bottom: 16px;
  line-height: 1.6;
  color: {{ section.settings.tooltip_text_color | color_modify: 'alpha', 0.8 }};
}
{{ sid }} .pc-hotspot-tooltip-button {
  margin-top: 16px;
  display: inline-block;
  padding: 10px 20px;
  background: {{ section.settings.tooltip_button_background }};
  color: {{ section.settings.tooltip_button_text_color }};
  border-radius: {{ section.settings.tooltip_button_border_radius }}px;
  text-decoration: none;
  transition: all 0.3s ease;
  font-size: {{ section.settings.tooltip_button_font_size }}px;
  font-weight: 500;
}
@media screen and (min-width: 750px) {
  {{ sid }} .pc-hotspot-section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
}
@media screen and (max-width: 749px) {
  {{ sid }} .pc-hotspot-section-{{ section.id }} {
    padding: 0 10px;
  }
  {{ sid }} .pc-hotspot-point-{{ section.id }} {
    width: {{ section.settings.hotspot_size | times: 0.8 }}px;
    height: {{ section.settings.hotspot_size | times: 0.8 }}px;
  }
  {{ sid }} .pc-hotspot-tooltip-{{ section.id }} {
    width: calc(100vw - 40px);
    max-width: 300px;
    left: 50% !important;
    transform: translateX(-50%) translateY(20px) !important;
    position: fixed;
    bottom: 20px;
    top: auto !important;
  }
  {{ sid }} .pc-hotspot-tooltip-{{ section.id }}.active {
    transform: translateX(-50%) translateY(0) !important;
  }
  {{ sid }} .pc-hotspot-tooltip-heading {
    font-size: {{ section.settings.tooltip_heading_size | times: 0.9 }}px;
  }
  {{ sid }} .pc-hotspot-tooltip-content {
    font-size: {{ section.settings.tooltip_font_size | times: 0.9 }}px;
  }
  {{ sid }} .pc-hotspot-tooltip-button {
    font-size: {{ section.settings.tooltip_button_font_size | times: 0.9 }}px;
    padding: 8px 16px;
  }
}
{%- endstyle -%}

<div class="pc-hotspot-section-{{ section.id }}">
