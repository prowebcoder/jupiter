{%- assign sid = '#shopify-section-' | append: section.id -%}

{%- style -%}
  {{ sid }} .newsletter-parallax {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    overflow: hidden;
  }

  {{ sid }} .newsletter-parallax__container {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: {{ section.settings.layout_direction }};
    align-items: center;
    gap: {{ section.settings.gap }}px;
  }

  {{ sid }} .newsletter-parallax__content {
    flex: 1;
    padding: 2rem;
  }

  {{ sid }} .newsletter-parallax__image-wrapper {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_radius }}px;
    min-height: 400px;
  }

  {{ sid }} .newsletter-parallax__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    will-change: transform;
  }

  {{ sid }} .newsletter-parallax__heading {
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
  }

  {{ sid }} .newsletter-parallax__text {
    margin-bottom: 2rem;
    color: {{ section.settings.text_color }};
  }

  {{ sid }} .newsletter-parallax__form {
    display: flex;
    gap: 1rem;
    max-width: 500px;
  }

  {{ sid }} .newsletter-parallax__input {
    flex: 1;
    padding: 12px 15px;
    border: 1px solid {{ section.settings.input_border }};
    border-radius: {{ section.settings.input_radius }}px;
  }

  {{ sid }} .newsletter-parallax__button {
    padding: 12px 30px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    {{ sid }} .newsletter-parallax__container {
      flex-direction: column;
    }

    {{ sid }} .newsletter-parallax {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }

    {{ sid }} .newsletter-parallax__image-wrapper {
      min-height: 300px;
      width: 100%;
    }
  }
{%- endstyle -%}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const image = document.querySelector('{{ sid }} .newsletter-parallax__image');

    if (image) {
      window.addEventListener('scroll', function() {
        const scrollPosition = window.pageYOffset;
        const elementOffset = image.parentElement.offsetTop;
        const distance = (scrollPosition - elementOffset) * 0.2;
        image.style.transform = 'translateY(' + distance + 'px)';
      });
    }
  });
</script>

<div class="newsletter-parallax">
  <div class="newsletter-parallax__container">
    <div class="newsletter-parallax__content">
      {% if section.settings.heading != blank %}
        <h2 class="newsletter-parallax__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="newsletter-parallax__text">{{ section.settings.text }}</div>
      {% endif %}

      {% form 'customer' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-parallax__form">
          <input
            type="email"
            name="contact[email]"
            class="newsletter-parallax__input"
            placeholder="{{ section.settings.placeholder }}"
            required
          >
          <button type="submit" class="newsletter-parallax__button">
            {{ section.settings.button }}
          </button>
        </div>
      {% endform %}
    </div>

    <div class="newsletter-parallax__image-wrapper">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: '800x' }}"
          alt="{{ section.settings.image.alt | escape }}"
          class="newsletter-parallax__image"
          loading="lazy"
          width="800"
          height="{{ 800 | divided_by: section.settings.image.aspect_ratio }}"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'newsletter-parallax__image' }}
      {% endif %}
    </div>
  </div>
</div>

