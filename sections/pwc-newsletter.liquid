{%- assign sid = section.id -%}

<style>
  #shopify-section-{{ sid }} .newsletter-parallax-section {
    position: relative;
    overflow: hidden;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    background-color: {{ section.settings.bg_color }};
  }

  #shopify-section-{{ sid }} .newsletter-parallax-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    will-change: transform;
    z-index: 0;
    {% if section.settings.parallax_enable %}
      background-attachment: fixed;
    {% endif %}
  }

  #shopify-section-{{ sid }} .newsletter-parallax-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  #shopify-section-{{ sid }} .newsletter-parallax-content {
    position: relative;
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    z-index: 2;
    text-align: {{ section.settings.text_alignment }};
    {% if section.settings.content_position == 'left' %}
      margin-right: auto;
    {% else %}
      margin-left: auto;
    {% endif %}
  }

  #shopify-section-{{ sid }} .newsletter-parallax-heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: 15px;
  }

  #shopify-section-{{ sid }} .newsletter-parallax-text {
    color: {{ section.settings.text_color }};
    margin-bottom: 25px;
  }

  #shopify-section-{{ sid }} .newsletter-parallax-form {
    display: flex;
    gap: 10px;
    max-width: 500px;
    margin: 0 auto;
  }

  #shopify-section-{{ sid }} .newsletter-parallax-input {
    flex: 1;
    padding: 12px 15px;
    border: 1px solid {{ section.settings.input_border }};
    border-radius: {{ section.settings.input_radius }}px;
    background: {{ section.settings.input_bg }};
    color: {{ section.settings.input_text }};
  }

  #shopify-section-{{ sid }} .newsletter-parallax-button {
    padding: 12px 25px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #shopify-section-{{ sid }} .newsletter-parallax-button:hover {
    background: {{ section.settings.button_hover_bg }};
  }

  @media (max-width: 768px) {
    #shopify-section-{{ sid }} .newsletter-parallax-section {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }

    #shopify-section-{{ sid }} .newsletter-parallax-form {
      flex-direction: column;
    }

    #shopify-section-{{ sid }} .newsletter-parallax-bg {
      background-attachment: scroll !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    {% if section.settings.parallax_enable %}
      const bg = document.querySelector('#shopify-section-{{ sid }} .newsletter-parallax-bg');
      
      window.addEventListener('scroll', function() {
        const scrollY = window.scrollY;
        bg.style.transform = `translateY(${scrollY * 0.3}px)`;
      });
    {% endif %}
  });
</script>

<div class="newsletter-parallax-section">
  <div
    class="newsletter-parallax-bg"
    style="background-image: url('{{ section.settings.bg_image | img_url: '2000x' }}');"
  ></div>

  <div class="newsletter-parallax-overlay"></div>

  <div class="newsletter-parallax-content">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-parallax-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="newsletter-parallax-text">{{ section.settings.text }}</div>
    {% endif %}

    {% form 'customer', class: 'newsletter-parallax-form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input
        type="email"
        name="contact[email]"
        class="newsletter-parallax-input"
        placeholder="{{ section.settings.placeholder }}"
        required
      >
      <button type="submit" class="newsletter-parallax-button">
        {{ section.settings.button_text_n }}
      </button>
    {% endform %}
  </div>
</div>

