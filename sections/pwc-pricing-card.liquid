{%- assign sec_id = '#shopify-section-' | append: section.id -%}

<style>
  {{ sec_id }} .pc-pricing-table__item img {
    height: 128px;
    margin-bottom: 20px;
  }

  {{ sec_id }} .pc-pricing-table__products {
    margin: 11px 0;
  }
  
  {{ sec_id }} .pc-all-pricing-table {
    width: 100%;
  }
  
  {{ sec_id }} .pc-pricing-table-wrapper {
    max-width: 71rem;
    margin: 0 auto;
  }

  {{ sec_id }} .pc-pricing-table {
    --pc-pricing-table-color: hsl(219, 83%, 57%);
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2em;
    margin: 0 auto;
    padding: 0;
    list-style: none;
    margin-top: 22px;
  }

  {{ sec_id }} .pc-pricing-table__item {
    display: flex;
    max-height: 100%;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    padding: 2em;
    border-radius: 1.5em;
    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    transition: box-shadow 200ms cubic-bezier(0.02, 0.01, 0.47, 1), transform 200ms cubic-bezier(0.02, 0.01, 0.47, 1);
  }

  {{ sec_id }} .pc-pricing-table__item:hover {
    box-shadow: 0 40px 40px rgba(0, 0, 0, 0.16);
    transform: translateY(-20px);
  }

  {{ sec_id }} .pc-pricing-table__item--popular {
    position: relative;
  }

  {{ sec_id }} .pc-pricing-table__item--popular::before {
    position: absolute;
    content: attr(data-popular);
    top: 2em;
    right: 2em;
    font-size: 0.9em;
    padding: 0 1em;
    background-color: hsl(51, 100%, 50%);
    border-radius: 1em;
    color: hsl(60, 5%, 15%);
  }

  {{ sec_id }} .pc-pricing-table__img {
    width: 100%;
    max-width: 9.3em;
  }

  {{ sec_id }} .pc-pricing-table__title {
    margin: 0;
    font-size: 1.7em;
    text-transform: capitalize;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_font_weight }};
    font-style: {{ section.settings.font_style }};
    letter-spacing: {{ section.settings.letter_spacing }}px;
    text-decoration: {{ section.settings.text_decoration }};
    {% if section.settings.text_decoration != 'none' %}
      text-decoration-color: {{ section.settings.text_decoration_color }};
    {% endif %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-size: 
    {% case section.settings.text_size %}
      {% when 'small' %}14px
      {% when 'medium' %}18px
      {% when 'large' %}24px
      {% else %}16px
    {% endcase %};
  }

  /* ... (keep all your other CSS rules the same) ... */

  {{ sec_id }} .pc-all-pricing-table {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<div class="pc-all-pricing-table">
  <div class="page-width">
    <ul class="pc-pricing-table">
      {% for block in section.blocks %}
        {% assign plan = block.settings %}
        <li class="pc-pricing-table__item{% if block.settings.popular %} pc-pricing-table__item--popular{% endif %}"
            {% if block.settings.popular %}data-popular="Popular"{% endif %}>
          
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url }}"
              alt=""
              class="pc-pricing-table__img"
              style="width: {{ plan.image_width }}px; height: auto;"
            />
          {% endif %}

          <h3 class="pc-pricing-table__title">{{ block.settings.title }}</h3>
  
          <p class="pc-pricing-table__description">
            <span class="pc-pricing-table__tagline"
              style="
                color: {{ block.settings.tagline_text_color }};
                text-align: {{ block.settings.tagline_text_align }};
                font-weight: {{ block.settings.tagline_font_weight }};
                font-style: {{ block.settings.tagline_font_style }};
                letter-spacing: {{ block.settings.tagline_letter_spacing }}px;
                text-decoration: {{ block.settings.tagline_text_decoration }};
                text-decoration-color: {{ block.settings.tagline_text_decoration_color}} !important;
                padding-top: {{ block.settings.tagline_padding_top }}px;
                padding-bottom: {{ block.settings.tagline_padding_bottom }}px;
                font-size:
                {% case block.settings.tagline_text_size %}
                  {% when 'small' %}14px
                  {% when 'medium' %}18px
                  {% when 'large' %}24px
                  {% else %}16px
                {% endcase %};
              ">
              {{ block.settings.tagline }}
            </span>
            
            {% assign price_font_size = '' %}
            {% case plan.price_text_size %}
              {% when 'small' %} {% assign price_font_size = '14px' %}
              {% when 'medium' %} {% assign price_font_size = '18px' %}
              {% when 'large' %} {% assign price_font_size = '24px' %}
              {% else %} {% assign price_font_size = '16px' %}
            {% endcase %}

            <span class="pc-pricing-table__price"
              style="
                color: {{ block.settings.price_title_color }};
                text-align: {{ plan.price_text_align }};
                font-weight: {{ plan.price_font_weight }};
                font-style: {{ plan.price_font_style }};
                letter-spacing: {{ plan.price_letter_spacing }}px;
                text-decoration: {{ plan.price_text_decoration }};
                padding-top: {{ plan.price_padding_top }}px;
                padding-bottom: {{ plan.price_padding_bottom }}px;
                font-size: {{ price_font_size }};
              ">
              {{ plan.price }}
            </span>

            {% assign label_font_size = '' %}
            {% case plan.label_text_size %}
              {% when 'small' %} {% assign label_font_size = '14px' %}
              {% when 'medium' %} {% assign label_font_size = '18px' %}
              {% when 'large' %} {% assign label_font_size = '24px' %}
              {% else %} {% assign label_font_size = '16px' %}
            {% endcase %}

            <span class="pc-pricing-table__label"
              style="
                color: {{ block.settings.label_title_color }};
                text-align: {{ plan.label_text_align }};
                font-weight: {{ plan.label_font_weight }};
                font-style: {{ plan.label_font_style }};
                letter-spacing: {{ plan.label_letter_spacing }}px;
                text-decoration: {{ plan.label_text_decoration }};
                text-decoration-color: {{ plan.label_text_decoration_color }};
                padding-top: {{ plan.label_padding_top }}px;
                padding-bottom: {{ plan.label_padding_bottom }}px;
                font-size: {{ label_font_size }};
              ">
              {{ plan.label }}
            </span>

            {% assign save_font_size = '' %}
            {% case plan.save_text_size %}
              {% when 'small' %} {% assign save_font_size = '14px' %}
              {% when 'medium' %} {% assign save_font_size = '18px' %}
              {% when 'large' %} {% assign save_font_size = '24px' %}
              {% else %} {% assign save_font_size = '16px' %}
            {% endcase %}

            <span class="pc-pricing-table__save"
              style="
                color: {{ block.settings.save_title_color }};
                text-align: {{ plan.save_text_align }};
                font-weight: {{ plan.save_font_weight }};
                font-style: {{ plan.save_font_style }};
                letter-spacing: {{ plan.save_letter_spacing }}px;
                text-decoration: {{ plan.save_text_decoration }};
                text-decoration-color: {{ plan.save_text_decoration_color }};
                padding-top: {{ plan.save_padding_top }}px;
                padding-bottom: {{ plan.save_padding_bottom }}px;
                font-size: {{ save_font_size }};
              ">
              {{ plan.save }}
            </span>
          </p>
          
          <ul class="pc-pricing-table__products">
            {% assign included = plan.included_items | split: ',' %}
            {% for item in included %}
              {% assign item_trimmed = item | strip %}
              <li class="pc-pricing-table__product">
                <a href="#">
                  {{ item_trimmed }}
                </a>
              </li>
            {% endfor %}

            {% assign excluded = plan.excluded_items | split: ',' %}
            {% for item in excluded %}
              {% assign item_trimmed = item | strip %}
              <li class="pc-pricing-table__product pc-pricing-table__product--excluded">
                <a href="#">
                  {{ item_trimmed }}
                </a>
              </li>
            {% endfor %}
          </ul>
          
          <a href="{{ block.settings.button_url | default: '#' }}"
            class="pc-pricing-table__button"
            style="
              background: {{ block.settings.button_background_color }};
              color: {{ block.settings.button_text_color }};
              font-size: {{ block.settings.button_font_size }}px;
              font-weight: {{ plan.button_font_weight }};
              text-transform: {{ block.settings.button_text_transform }};
              letter-spacing: {{ block.settings.button_letter_spacing }}px;
              text-decoration: {{ block.settings.button_text_decoration }};
              border: 1px solid {{ block.settings.button_border_color }};
              border-radius: {{ block.settings.button_border_radius }}px;
              padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
              min-width: {{ block.settings.button_min_width }}px;
            ">
            {{ block.settings.button_label }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

