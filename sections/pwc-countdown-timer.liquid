<style>
  .countdown-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.timer_color }};
    padding: 60px 20px;
    text-align: center;
  }

  .countdown-heading {
    font-size: 2rem;
    margin-bottom: 30px;
  }

  .countdown-timer {
    display: flex;
    justify-content: center;
    gap: 25px;
    flex-wrap: wrap;
  }

  .countdown-block {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 20px 15px;
    border-radius: 12px;
    min-width: 90px;
    transition: all 0.3s ease;
  }

  .countdown-number {
    font-size: 2.5rem;
    font-weight: bold;
    display: block;
  }

  .countdown-label {
    font-size: 1rem;
    margin-top: 5px;
    display: block;
  }

  .end-message {
    display: none;
    font-size: 2rem;
    margin-top: 30px;
    animation: pop-in 0.6s ease forwards;
  }

  @keyframes pop-in {
    0% {
      opacity: 0;
      transform: scale(0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 500px) {
    .countdown-number {
      font-size: 1.8rem;
    }

    .countdown-block {
      min-width: 70px;
    }

    .countdown-heading {
      font-size: 1.5rem;
    }
  }
</style>

<div class="countdown-section">
  <h2 class="countdown-heading">{{ section.settings.heading }}</h2>
  <div id="countdown" class="countdown-timer">
    <div class="countdown-block">
      <span id="days" class="countdown-number">00</span>
      <span class="countdown-label">Days</span>
    </div>
    <div class="countdown-block">
      <span id="hours" class="countdown-number">00</span>
      <span class="countdown-label">Hours</span>
    </div>
    <div class="countdown-block">
      <span id="minutes" class="countdown-number">00</span>
      <span class="countdown-label">Minutes</span>
    </div>
    <div class="countdown-block">
      <span id="seconds" class="countdown-number">00</span>
      <span class="countdown-label">Seconds</span>
    </div>
  </div>
  <div id="end-message" class="end-message">
    {{ section.settings.end_message }}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const targetDate = new Date("{{ section.settings.target_date }}").getTime();
    const daysEl = document.getElementById("days");
    const hoursEl = document.getElementById("hours");
    const minutesEl = document.getElementById("minutes");
    const secondsEl = document.getElementById("seconds");
    const countdownEl = document.getElementById("countdown");
    const endMessageEl = document.getElementById("end-message");

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance <= 0) {
        countdownEl.style.display = "none";
        endMessageEl.style.display = "block";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      daysEl.textContent = String(days).padStart(2, "0");
      hoursEl.textContent = String(hours).padStart(2, "0");
      minutesEl.textContent = String(minutes).padStart(2, "0");
      secondsEl.textContent = String(seconds).padStart(2, "0");
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
  });
</script>

