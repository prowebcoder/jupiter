    {
      "type": "header",
      "content": "Effects"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Hover Effect",
      "options": [
        {
          "value": "zoom",
          "label": "Zoom"
        },
        {
          "value": "shadow",
          "label": "Shadow"
        },
        {
          "value": "lift",
          "label": "Lift"
        },
        {
          "value": "fade",
          "label": "Fade"
        }
      ],
      "default": "zoom"
    },
    {
      "type": "range",
      "id": "transition_duration",
      "min": 100,
      "max": 1000,
      "step": 50,
      "unit": "ms",
      "label": "Transition Duration",
      "default": 300
    }
