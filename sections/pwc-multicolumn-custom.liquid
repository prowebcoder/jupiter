{% schema %}
{
  "name": "PWC Multicolumns",
  "tag": "section",
  "class": "pc-collage-gallery",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collage Gallery"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 12,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading Size",
      "default": 30
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Heading Size (Mobile)",
      "default": 24
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Heading Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Bottom Spacing",
      "default": 30
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 800,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "label": "Container Width",
      "default": 1200
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Section Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "text",
      "id": "section_padding",
      "label": "Section Padding (CSS)",
      "default": "padding: 60px 0"
    },
    {
      "type": "text",
      "id": "section_margin",
      "label": "Section Margin (CSS)",
      "default": "margin: 0"
    },
    {
      "type": "header",
      "content": "Grid Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Columns (Desktop)",
      "default": 3
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Columns (Tablet)",
      "default": 2
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Columns (Mobile)",
      "default": 1
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Column Gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "row_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Row Gap",
      "default": 20
    },
    {
      "type": "header",
      "content": "Column Styling"
    },
    {
      "type": "color",
      "id": "column_bg",
      "label": "Column Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "column_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Column Border Radius",
      "default": 12
    },
    {
      "type": "text",
      "id": "column_padding",
      "label": "Column Padding (CSS)",
      "default": "20px"
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Image Border Radius",
      "default": 8
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "content_padding",
      "label": "Content Padding (CSS)",
      "default": "20px"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Title Size",
      "default": 22
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Title Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "title_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "Title Font Weight",
      "default": 600
    },
    {
      "type": "range",
      "id": "title_spacing",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Title Bottom Spacing",
      "default": 10
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text Size (Mobile)",
      "default": 14
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Text Bottom Spacing",
      "default": 15
    },
    {
      "type": "header",
      "content": "Button Styling"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_bg_hover",
      "label": "Button Background (Hover)",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_hover",
      "label": "Button Text (Hover)",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Button Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "Button Font Weight",
      "default": 500
    },
    {
      "type": "range",
      "id": "button_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Button Border Radius",
      "default": 4
    },
    {
      "type": "text",
      "id": "button_padding",
      "label": "Button Padding (CSS)",
      "default": "10px 20px"
    },
    {
      "type": "range",
      "id": "button_border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Button Border Width",
      "default": 0
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "transparent"
    },
    {
      "type": "header",
      "content": "Icon Styling"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 12,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Icon Size",
      "default": 24
    },
    {
      "type": "color",
      "id": "icon_color",
