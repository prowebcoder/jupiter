      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "range",
      "label": "Mobile Image Width (px)",
      "id": "mobile_image_width",
      "min": 30,
      "max": 120,
      "step": 5,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Mobile Image Height (px)",
      "id": "mobile_image_height",
