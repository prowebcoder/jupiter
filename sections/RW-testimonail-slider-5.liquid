{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-testimonial-slider-{{ last_part }} class="pc-testimonial-slider">
  <div class="pc-testimonial-slider__inner">
    <h2 class="pc-testimonial-slider__heading">{{ section.settings.heading }}</h2>
    
    <div class="pc-testimonial-slider__container">
      {% for block in section.blocks %}
        <div class="pc-testimonial-slider__slide" {{ block.shopify_attributes }}>
          <div class="pc-testimonial-slider__content">
            <div class="pc-testimonial-slider__quote">
              {{ block.settings.quote }}
            </div>
            <div class="pc-testimonial-slider__author">
              <div class="pc-testimonial-slider__name">{{ block.settings.name }}</div>
              <div class="pc-testimonial-slider__title">{{ block.settings.title }}</div>
              <div class="pc-testimonial-slider__company">{{ block.settings.company }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
    <div class="pc-testimonial-slider__controls">
      <button class="pc-testimonial-slider__prev" aria-label="Previous">
        <svg width="14" height="24" viewBox="0 0 14 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M13 1L1 12L13 23" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="pc-testimonial-slider__dots"></div>
      <button class="pc-testimonial-slider__next" aria-label="Next">
        <svg width="14" height="24" viewBox="0 0 14 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L13 12L1 23" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
    
    <a href="{{ section.settings.link_url }}" class="pc-testimonial-slider__link">
      {{ section.settings.link_text }}
    </a>
  </div>
</pc-testimonial-slider-{{ last_part }}>

<style>
  {{ sec_id }} .pc-testimonial-slider {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ section.settings.desktop_padding_top }}px {{ section.settings.desktop_padding_right }}px {{ section.settings.desktop_padding_bottom }}px {{ section.settings.desktop_padding_left }}px;
    background-color: {{ section.settings.bg_color }};
  }
  
  {{ sec_id }} .pc-testimonial-slider__inner {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  {{ sec_id }} .pc-testimonial-slider__heading {
    text-align: center;
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: 40px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__container {
    display: flex;
    transition: transform 0.5s ease;
  }
  
  {{ sec_id }} .pc-testimonial-slider__slide {
    flex: 0 0 100%;
    min-width: 100%;
    padding: 20px;
    box-sizing: border-box;
  }
  
  {{ sec_id }} .pc-testimonial-slider__content {
    background: {{ section.settings.card_bg_color }};
    border-radius: 8px;
    padding: 40px;
    box-shadow: {% if section.settings.enable_shadow %}0 4px 20px rgba(0,0,0,0.1){% else %}none{% endif %};
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  {{ sec_id }} .pc-testimonial-slider__quote {
    font-size: {{ section.settings.quote_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.quote_color }};
    margin-bottom: 30px;
    flex-grow: 1;
  }
  
  {{ sec_id }} .pc-testimonial-slider__author {
    border-top: 1px solid {{ section.settings.divider_color }};
    padding-top: 20px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__name {
    font-size: {{ section.settings.name_font_size }}px;
    font-weight: bold;
    color: {{ section.settings.name_color }};
    margin-bottom: 5px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: 5px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__company {
    font-size: {{ section.settings.company_font_size }}px;
    color: {{ section.settings.company_color }};
    font-weight: 500;
  }
  
  {{ sec_id }} .pc-testimonial-slider__controls {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 30px 0;
    gap: 20px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__prev,
  {{ sec_id }} .pc-testimonial-slider__next {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 10px;
    color: {{ section.settings.arrow_color }};
    transition: opacity 0.3s;
  }
  
  {{ sec_id }} .pc-testimonial-slider__prev:hover,
  {{ sec_id }} .pc-testimonial-slider__next:hover {
    opacity: 0.7;
  }
  
  {{ sec_id }} .pc-testimonial-slider__dots {
    display: flex;
    gap: 10px;
  }
  
  {{ sec_id }} .pc-testimonial-slider__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: {{ section.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: opacity 0.3s;
  }
  
  {{ sec_id }} .pc-testimonial-slider__dot.active {
    opacity: 1;
  }
  
  {{ sec_id }} .pc-testimonial-slider__link {
    display: block;
    text-align: center;
    font-size: {{ section.settings.link_font_size }}px;
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-weight: 500;
    margin-top: 20px;
    transition: color 0.3s;
  }
  
  {{ sec_id }} .pc-testimonial-slider__link:hover {
    color: {{ section.settings.link_hover_color }};
  }
  
  @media (max-width: 768px) {
    {{ sec_id }} .pc-testimonial-slider {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }
    
    {{ sec_id }} .pc-testimonial-slider__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      margin-bottom: 30px;
    }
    
    {{ sec_id }} .pc-testimonial-slider__slide {
      padding: 10px;
    }
    
    {{ sec_id }} .pc-testimonial-slider__content {
      padding: 25px;
    }
    
    {{ sec_id }} .pc-testimonial-slider__quote {
      font-size: {{ section.settings.quote_font_size_mobile }}px;
    }
  }
</style>

<script>
  (function() {
    const section = document.querySelector('pc-testimonial-slider-{{ last_part }}');
    if (!section) return;
    
    const container = section.querySelector('.pc-testimonial-slider__container');
    const slides = section.querySelectorAll('.pc-testimonial-slider__slide');
    const prevBtn = section.querySelector('.pc-testimonial-slider__prev');
    const nextBtn = section.querySelector('.pc-testimonial-slider__next');
    const dotsContainer = section.querySelector('.pc-testimonial-slider__dots');
    
    let currentSlide = 0;
    const totalSlides = slides.length;
    
    // Create dots
    slides.forEach((_, index) => {
      const dot = document.createElement('div');
      dot.classList.add('pc-testimonial-slider__dot');
      if (index === 0) dot.classList.add('active');
      dot.addEventListener('click', () => goToSlide(index));
      dotsContainer.appendChild(dot);
    });
    
    const dots = section.querySelectorAll('.pc-testimonial-slider__dot');
    
    // Navigation functions
    function goToSlide(index) {
      currentSlide = index;
      container.style.transform = `translateX(-${currentSlide * 100}%)`;
      
      // Update active dot
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentSlide);
      });
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      goToSlide(currentSlide);
    }
    
    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      goToSlide(currentSlide);
    }
    
    // Event listeners
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);
    
    // Autoplay
    {% if section.settings.autoplay_enable %}
      let autoplayInterval = setInterval(nextSlide, {{ section.settings.autoplay_interval }});
      
      // Pause autoplay on hover
      section.addEventListener('mouseenter', () => clearInterval(autoplayInterval));
      section.addEventListener('mouseleave', () => {
        autoplayInterval = setInterval(nextSlide, {{ section.settings.autoplay_interval }});
      });
    {% endif %}
  })();
</script>
