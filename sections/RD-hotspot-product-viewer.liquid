{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} {
    --pc-hotspot-size: {{ section.settings.hotspot_size }}px;
    --pc-hotspot-color: {{ section.settings.hotspot_color }};
    --pc-hotspot-text-color: {{ section.settings.hotspot_text_color }};
    --pc-hotspot-active-color: {{ section.settings.hotspot_active_color }};
    --pc-slider-height: {{ section.settings.slider_height }}px;
    --pc-product-card-height: {{ section.settings.product_card_height }}px;
  }

  {{ sec_id }} pc-hotspot-container-{{ last_part }} {
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px;
    display: block;
  }

  {{ sec_id }} pc-hotspot-section-{{ last_part }} {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    gap: {{ section.settings.block_gap }}px;
    height: {{ section.settings.desktop_height }}px;
  }

  {{ sec_id }} pc-hotspot-image-wrapper-{{ last_part }},
  {{ sec_id }} pc-product-slider-{{ last_part }} {
    width: 50%;
    position: relative;
  }

  {{ sec_id }} pc-hotspot-image-wrapper-{{ last_part }} {
    height: 100%;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
    display: block;
  }

  {{ sec_id }} pc-hotspot-main-image-{{ last_part }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: inherit;
    display: block;
  }

  {{ sec_id }} pc-hotspot-{{ last_part }} {
    position: absolute;
    background: var(--pc-hotspot-color);
    color: var(--pc-hotspot-text-color);
    border-radius: 50%;
    width: var(--pc-hotspot-size);
    height: var(--pc-hotspot-size);
    text-align: center;
    line-height: var(--pc-hotspot-size);
    font-weight: bold;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
    box-shadow: 0 0 0 2px white, 0 0 8px rgba(0,0,0,0.2);
  }

  {{ sec_id }} pc-hotspot-{{ last_part }}.active {
    background: var(--pc-hotspot-active-color);
    transform: scale(1.1);
  }

  {{ sec_id }} pc-product-slider-{{ last_part }} {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.product_bg_color }};
    border-radius: {{ section.settings.slider_border_radius }}px;
    overflow: hidden;
  }

  {{ sec_id }} pc-slider-wrapper-{{ last_part }} {
    width: 100%;
    height: var(--pc-slider-height);
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
  }

  {{ sec_id }} pc-arrow-buttons-{{ last_part }} {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 3;
  }

  {{ sec_id }} pc-arrow-{{ last_part }} {
    background: white;
    border: 1px solid #ddd;
    font-size: 20px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  {{ sec_id }} pc-arrow-{{ last_part }}:hover {
    background: #f0f0f0;
  }

  {{ sec_id }} pc-product-cards-{{ last_part }} {
    transition: transform 0.5s ease-in-out;
  }

  {{ sec_id }} pc-product-card-{{ last_part }} {
    height: var(--pc-product-card-height);
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  {{ sec_id }} pc-product-title-{{ last_part }} {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
  }

  {{ sec_id }} pc-product-price-{{ last_part }} {
    color: {{ section.settings.price_color }};
    font-size: {{ section.settings.price_size }}px;
    margin-bottom: 15px;
  }

  {{ sec_id }} .pc-product-image-{{ last_part }} {
    max-height: {{ section.settings.product_image_height }}px;
    max-width: 100%;
    object-fit: contain;
    margin-bottom: 15px;
  }

  {{ sec_id }} pc-quick-view-btn-{{ last_part }} {
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border: none;
    padding: 8px 16px;
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  {{ sec_id }} pc-quick-view-btn-{{ last_part }}:hover {
    background-color: {{ section.settings.button_bg_hover }};
    color: {{ section.settings.button_text_hover }};
    transform: translateY(-2px);
  }

  {{ sec_id }} pc-quick-view-modal-{{ last_part }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  {{ sec_id }} pc-quick-view-modal-{{ last_part }}.active {
    opacity: 1;
    visibility: visible;
  }

  {{ sec_id }} pc-modal-content-{{ last_part }} {
    background: white;
    max-width: 600px;
    width: 90%;
    padding: 30px;
    border-radius: 8px;
    position: relative;
    overflow-y: auto;
    max-height: 80vh;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  {{ sec_id }} pc-quick-view-modal-{{ last_part }}.active pc-modal-content-{{ last_part }} {
    transform: translateY(0);
  }

  {{ sec_id }} pc-modal-close-{{ last_part }} {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 10;
  }

  @media (max-width: 768px) {
    {{ sec_id }} pc-hotspot-section-{{ last_part }} {
      flex-direction: column;
      height: auto;
    }

    {{ sec_id }} pc-hotspot-image-wrapper-{{ last_part }},
    {{ sec_id }} pc-product-slider-{{ last_part }} {
      width: 100%;
    }

    {{ sec_id }} pc-hotspot-image-wrapper-{{ last_part }} {
      height: {{ section.settings.mobile_image_height }}px;
    }

    {{ sec_id }} pc-slider-wrapper-{{ last_part }} {
      height: {{ section.settings.mobile_slider_height }}px;
    }

    {{ sec_id }} pc-product-card-{{ last_part }} {
      height: auto;
      min-height: {{ section.settings.mobile_product_card_height }}px;
    }

    {{ sec_id }} pc-arrow-buttons-{{ last_part }} {
      top: auto;
      bottom: 10px;
      right: 50%;
      transform: translateX(50%);
      flex-direction: row;
    }
  }
</style>

<pc-hotspot-container-{{ last_part }}>
  <pc-hotspot-section-{{ last_part }}>
    <pc-hotspot-image-wrapper-{{ last_part }}>
      {%- if section.settings.main_image != blank -%}
        {{ 
          section.settings.main_image 
          | image_url: width: 1000 
          | image_tag: 
              loading: 'lazy', 
              class: 'pc-hotspot-main-image-' | append: last_part,
              alt: section.settings.main_image.alt | escape 
        }}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'pc-hotspot-main-image-' | append: last_part }}
      {%- endif -%}
      
      {%- for block in section.blocks -%}
        <pc-hotspot-{{ last_part }} 
          class="{% if forloop.first %}active{% endif %}" 
          style="top:{{ block.settings.top }}%; left:{{ block.settings.left }}%;"
          data-index="{{ forloop.index0 }}"
        >
          {{ forloop.index }}
        </pc-hotspot-{{ last_part }}>
      {%- endfor -%}
    </pc-hotspot-image-wrapper-{{ last_part }}>
    
    <pc-product-slider-{{ last_part }}>
      <pc-slider-wrapper-{{ last_part }}>
        <pc-arrow-buttons-{{ last_part }}>
          <pc-arrow-{{ last_part }} class="up">↑</pc-arrow-{{ last_part }}>
          <pc-arrow-{{ last_part }} class="down">↓</pc-arrow-{{ last_part }}>
        </pc-arrow-buttons-{{ last_part }}>
        <pc-product-cards-{{ last_part }}>
          {%- for block in section.blocks -%}
            {%- assign product = all_products[block.settings.product] -%}
            {%- if product != blank -%}
              <pc-product-card-{{ last_part }} data-description="{{ product.description | strip_html | escape }}">
                <pc-product-title-{{ last_part }}>{{ product.title }}</pc-product-title-{{ last_part }}>
                <pc-product-price-{{ last_part }}>
                  {%- if product.compare_at_price > product.price -%}
                    <del>{{ product.compare_at_price | money }}</del>
                  {%- endif -%}
                  {{ product.price | money }}
                </pc-product-price-{{ last_part }}>
                
                {%- if product.featured_image != blank -%}
                  {% assign image_class = 'pc-product-image-' | append: last_part %}
                  {{ 
                    product.featured_image 
                    | image_url: width: 400 
                    | image_tag: 
                        loading: 'lazy', 
                        class: image_class,
                        alt: product.title 
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag }}
                {%- endif -%}
                
                <pc-quick-view-btn-{{ last_part }}>Quick View</pc-quick-view-btn-{{ last_part }}>
              </pc-product-card-{{ last_part }}>
            {%- endif -%}
          {%- endfor -%}
        </pc-product-cards-{{ last_part }}>
      </pc-slider-wrapper-{{ last_part }}>
    </pc-product-slider-{{ last_part }}>
  </pc-hotspot-section-{{ last_part }}>

  <pc-quick-view-modal-{{ last_part }}>
    <div class="pc-modal-overlay-{{ last_part }}"></div>
    <pc-modal-content-{{ last_part }}>
      <pc-modal-close-{{ last_part }}>&times;</pc-modal-close-{{ last_part }}>
      <div class="pc-modal-body-{{ last_part }}"></div>
    </pc-modal-content-{{ last_part }}>
  </pc-quick-view-modal-{{ last_part }}>
</pc-hotspot-container-{{ last_part }}>

<script>
class HotspotSlider_{{ last_part }} extends HTMLElement {
  constructor() {
    super();
    this.attachShadow({ mode: 'open' });
    
    this.currentIndex = 0;
    this.cards = [];
    this.hotspots = [];
    this.cardHeight = 0;
    this.step = 0;
    this.maxIndex = 0;
    
    // MutationObserver to watch for DOM changes
    this.observer = new MutationObserver(() => this.init());
  }
  
  connectedCallback() {
    this.init();
    this.observer.observe(this, { childList: true, subtree: true });
  }
  
  disconnectedCallback() {
    this.observer.disconnect();
  }
  
  init() {
    this.cardsContainer = this.querySelector(`pc-product-cards-${this.sectionId}`);
    this.cards = Array.from(this.querySelectorAll(`pc-product-card-${this.sectionId}`));
    this.hotspots = Array.from(this.querySelectorAll(`pc-hotspot-${this.sectionId}`));
    this.arrowUp = this.querySelector(`pc-arrow-${this.sectionId}.up`);
    this.arrowDown = this.querySelector(`pc-arrow-${this.sectionId}.down`);
    this.modal = this.querySelector(`pc-quick-view-modal-${this.sectionId}`);
    this.modalBody = this.querySelector('.pc-modal-body-' + this.sectionId);
    this.modalClose = this.querySelector(`pc-modal-close-${this.sectionId}`);
    
    if (!this.cardsContainer || !this.cards.length) return;
    
    this.cardHeight = this.cards[0].offsetHeight;
    this.step = this.cardHeight;
    this.maxIndex = this.cards.length - 1;
    
    this.updateSliderPosition();
    this.setupEventListeners();
  }
  
  get sectionId() {
    return this.getAttribute('data-section-id') || '{{ last_part }}';
  }
  
  updateSliderPosition() {
    this.cardsContainer.style.transform = `translateY(-${this.currentIndex * this.step}px)`;
    
    this.hotspots.forEach((h, i) => {
      h.classList.toggle('active', i === this.currentIndex);
    });
  }
  
  setupEventListeners() {
    // Hotspot click
    this.hotspots.forEach(h => {
      h.addEventListener('click', () => {
        const i = parseInt(h.dataset.index);
        if (i >= 0 && i <= this.maxIndex) {
          this.currentIndex = i;
          this.updateSliderPosition();
        }
      });
    });
    
    // Arrow navigation
    if (this.arrowUp) {
      this.arrowUp.addEventListener('click', () => {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateSliderPosition();
        }
      });
    }
    
    if (this.arrowDown) {
      this.arrowDown.addEventListener('click', () => {
        if (this.currentIndex < this.maxIndex) {
          this.currentIndex++;
          this.updateSliderPosition();
        }
      });
    }
    
    // Quick view modal
    this.querySelectorAll(`pc-quick-view-btn-${this.sectionId}`).forEach(btn => {
      btn.addEventListener('click', () => {
        const card = btn.closest(`pc-product-card-${this.sectionId}`);
        const img = card.querySelector('img').src;
        const title = card.querySelector(`pc-product-title-${this.sectionId}`).textContent;
        const price = card.querySelector(`pc-product-price-${this.sectionId}`).innerHTML;
        const description = card.dataset.description;
        
        this.modalBody.innerHTML = `
          <img src="${img}" class="pc-modal-img-${this.sectionId}" style="max-width:100%;margin-bottom:15px;">
          <div class="pc-product-title-${this.sectionId}">${title}</div>
          <div class="pc-product-price-${this.sectionId}">${price}</div>
          <div class="pc-product-description-${this.sectionId}" style="margin-top:10px;">${description}</div>
        `;
        this.modal.classList.add('active');
      });
    });
    
    // Close modal
    this.modalClose.addEventListener('click', () => this.modal.classList.remove('active'));
    this.modal.addEventListener('click', e => {
      if (e.target.classList.contains('pc-modal-overlay-' + this.sectionId)) {
        this.modal.classList.remove('active');
      }
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', e => {
      if (this.modal.classList.contains('active') && e.key === 'Escape') {
        this.modal.classList.remove('active');
      }
    });
  }
}

