<div class="custom-blog-layout">
  <!-- Heading -->
  <h3 class="section-heading">{{ section.settings.heading | default: "FROM THE BLOG" }}</h3>

  <!-- Image & Content Container -->
  <div class="blog-container">
    <!-- Image Block (Left) -->
    <div class="image-column" style="height: {{ section.settings.image_height }}px;">
      {% if section.settings.blog_image != blank %}
        <img
          src="{{ section.settings.blog_image | img_url: '1200x' }}"
          alt="{{ section.settings.blog_image.alt }}"
          class="blog-featured-image"
          loading="lazy"
          style="height: 100%; width: 100%; object-fit: cover;"
        >
      {% else %}
        <div class="image-placeholder" style="height: 100%;">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    <!-- Content Block (Right, Centered) -->
    <div class="content-column" style="height: {{ section.settings.image_height }}px;">
      <div class="content-wrapper" style="height: calc({{ section.settings.image_height }}px / 2);">
        <h4 class="post-title">{{ section.settings.blog_title | default: "Color pop" }}</h4>
        <p class="post-excerpt">
          {{ section.settings.blog_excerpt | default: "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..." }}
        </p>
        <div class="post-meta">
          <span class="meta-date">{{ section.settings.post_date | default: "Posted on Apr 28, 2017" }}</span>
          <span class="meta-category">{{ section.settings.blog_category | default: "Clothing Fashion" }}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-blog-layout {
    max-width: 1000px;
    margin: 0 auto;
    font-family: sans-serif;
    padding: 20px;
  }

  .section-heading {
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 16px;
    margin-bottom: 30px;
    color: #333;
  }

  .blog-container {
    display: flex;
    border: 1px solid #e1e1e1;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }

  .image-column {
    flex: 0 0 50%;
    overflow: hidden;
  }

  .content-column {
    flex: 0 0 50%;
    padding: 0 30px;
    display: flex;
    align-items: center; /* Vertically centers the content */
    justify-content: center; /* Horizontally centers (optional) */
  }

  .content-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centers text vertically inside its half-height container */
  }

  .post-title {
    font-size: 24px;
    margin: 0 0 15px 0;
    color: #222;
  }

  .post-excerpt {
    font-size: 16px;
    line-height: 1.5;
    color: #666;
    margin-bottom: 15px;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #999;
    border-top: 1px solid #eee;
    padding-top: 15px;
  }

  .image-placeholder {
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .blog-container {
      flex-direction: column;
    }

    .image-column,
    .content-column {
      flex: 1 1 100%;
    }

    .content-column {
      height: auto !important;
      padding: 20px;
    }

    .content-wrapper {
      height: auto !important;
    }
  }
</style>

{% schema %}
{
  "name": "Centered Blog Layout",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "FROM THE BLOG"
    },
    {
      "type": "image_picker",
      "id": "blog_image",
      "label": "Blog Post Image"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 300,
      "max": 1000,
      "step": 50,
      "default": 500,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Post Title",
      "default": "Color pop"
    },
    {
      "type": "textarea",
      "id": "blog_excerpt",
      "label": "Blog Excerpt",
      "default": "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..."
    },
    {
      "type": "text",
      "id": "post_date",
      "label": "Post Date",
      "default": "Posted on Apr 28, 2017"
    },
    {
      "type": "text",
      "id": "blog_category",
      "label": "Blog Category",
      "default": "Clothing Fashion"
    }
  ],
  "presets": [
    {
      "name": "Centered Blog Layout",
      "category": "Blog"
    }
  ]
}
{% endschema %}