<div class="custom-blog-layout">
  <!-- Heading -->
  <h3 class="section-heading">{{ section.settings.heading | default: "FROM THE BLOG" }}</h3>

  <!-- Image & Content Container -->
  <div class="blog-container" style="gap: {{ section.settings.gap_between_blocks }}px;">
    <!-- Image Block -->
    <div class="image-block" style="
      width: {{ section.settings.image_width }}%;
      height: {{ section.settings.image_height }}px;
      order: {{ section.settings.image_position }};
    ">
      {% if section.settings.blog_image != blank %}
        <img
          src="{{ section.settings.blog_image | img_url: '2000x' }}"
          alt="{{ section.settings.blog_image.alt | escape }}"
          class="blog-featured-image"
          loading="lazy"
          style="height: 100%; width: 100%; object-fit: {{ section.settings.image_fit }};"
        >
      {% elsif section.settings.enable_placeholder %}
        <div class="image-placeholder">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    <!-- Content Block -->
    <div class="content-block" style="
      width: {{ 100 | minus: section.settings.image_width }}%;
      height: {{ section.settings.content_height }}px;
    ">
      <div class="content-wrapper">
        <h4 class="post-title">{{ section.settings.blog_title }}</h4>
        <p class="post-excerpt">{{ section.settings.blog_excerpt }}</p>
        <div class="post-meta">
          <span class="meta-date">{{ section.settings.post_date }}</span>
          <span class="meta-category">{{ section.settings.blog_category }}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* [Previous CSS remains exactly the same] */
</style>

{% schema %}
{
  "name": "Advanced Blog Layout",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "blog_image",
      "label": "Blog Featured Image",
      "info": "Recommended size: 1200x800px"
    },
    {
      "type": "checkbox",
      "id": "enable_placeholder",
      "label": "Show Placeholder When No Image",
      "default": true
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width",
      "min": 30,
      "max": 70,
      "step": 5,
      "default": 50,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 200,
      "max": 1000,
      "step": 50,
      "default": 500,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image Fit Mode",
      "options": [
        { "value": "cover", "label": "Cover (crop to fit)" },
        { "value": "contain", "label": "Contain (show full image)" },
        { "value": "fill", "label": "Fill (stretch to fit)" }
      ],
      "default": "cover"
    },
    /* [All other existing settings remain exactly the same] */
  ],
  "presets": [
    {
      "name": "Advanced Blog Layout",
      "category": "Blog",
      "settings": {
        "blog_image": ""
      }
    }
  ]
}
{% endschema %}