<style>
  .blog-card {
    max-width: 600px;
    margin: 0 auto;
    font-family: sans-serif;
    padding: 20px;
  }
  
  .blog-card__heading {
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 16px;
    margin-bottom: 30px;
    color: #333;
  }
  
  .blog-card__container {
    border: 1px solid #e1e1e1;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }
  
  .blog-card__image-wrapper {
    overflow: hidden;
  }
  
  .blog-card__image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }
  
  .blog-card__image:hover {
    transform: scale(1.03);
  }
  
  .placeholder-image {
    background-color: #f5f5f5;
    padding: 20px;
  }
  
  .blog-card__content {
    padding: 20px;
  }
  
  .blog-card__title {
    font-size: 24px;
    margin: 0 0 15px 0;
    color: #222;
  }
  
  .blog-card__excerpt {
    font-size: 16px;
    line-height: 1.5;
    color: #666;
    margin-bottom: 15px;
  }
  
  .blog-card__meta {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #999;
    border-top: 1px solid #eee;
    padding-top: 15px;
  }
  
  @media (max-width: 480px) {
    .blog-card__content {
      padding: 15px;
    }
    
    .blog-card__title {
      font-size: 20px;
    }
  }
</style>

<div class="blog-card">
  <!-- Heading Section -->
  <h3 class="blog-card__heading">{{ section.settings.heading | default: "FROM THE BLOG" }}</h3>
  
  <!-- Blog Post Card -->
  <div class="blog-card__container">
    <!-- Featured Image -->
    <div class="blog-card__image-wrapper">
      {% if section.settings.blog_image != blank %}
        <img src="{{ section.settings.blog_image | img_url: '600x' }}" 
             alt="{{ section.settings.blog_image.alt }}" 
             class="blog-card__image"
             loading="lazy">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'blog-card__image placeholder-image' }}
      {% endif %}
    </div>
    
    <!-- Content Section -->
    <div class="blog-card__content">
      <!-- Title -->
      <h4 class="blog-card__title">{{ section.settings.blog_title | default: "Color pop" }}</h4>
      
      <!-- Excerpt -->
      <p class="blog-card__excerpt">
        {{ section.settings.blog_excerpt | default: "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..." }}
      </p>
      
      <!-- Metadata -->
      <div class="blog-card__meta">
        <span class="blog-card__date">{{ section.settings.post_date | default: "Posted on Apr 28, 2017" }}</span>
        <span class="blog-card__category">{{ section.settings.blog_category | default: "Clothing Fashion" }}</span>
      </div>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Blog Post Card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "FROM THE BLOG"
    },
    {
      "type": "image_picker",
      "id": "blog_image",
      "label": "Blog Post Image"
    },
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Post Title",
      "default": "Color pop"
    },
    {
      "type": "textarea",
      "id": "blog_excerpt",
      "label": "Blog Excerpt",
      "default": "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..."
    },
    {
      "type": "text",
      "id": "post_date",
      "label": "Post Date",
      "default": "Posted on Apr 28, 2017"
    },
    {
      "type": "text",
      "id": "blog_category",
      "label": "Blog Category",
      "default": "Clothing Fashion"
    }
  ],
  "presets": [
    {
      "name": "Blog Post Card",
      "category": "Blog"
    }
  ]
}
{% endschema %}