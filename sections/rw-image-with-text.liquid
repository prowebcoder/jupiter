<div class="custom-blog-card">
  <!-- Heading -->
  <h3 class="blog-heading">{{ section.settings.heading | default: "FROM THE BLOG" }}</h3>

  <!-- Image Block (Full Width) -->
  <div class="image-block" style="height: {{ section.settings.image_height }}px;">
    {% if section.settings.blog_image != blank %}
      <img 
        src="{{ section.settings.blog_image | img_url: '1200x' }}" 
        alt="{{ section.settings.blog_image.alt }}" 
        class="blog-image"
        loading="lazy"
        style="height: 100%; width: 100%; object-fit: cover;"
      >
    {% else %}
      <div class="placeholder-image" style="height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {% endif %}
  </div>

  <!-- Content Block (Half Height of Image) -->
  <div class="content-block" style="height: calc({{ section.settings.image_height }}px / 2);">
    <div class="content-inner">
      <h4 class="blog-title">{{ section.settings.blog_title | default: "Color pop" }}</h4>
      <p class="blog-excerpt">
        {{ section.settings.blog_excerpt | default: "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..." }}
      </p>
      <div class="blog-meta">
        <span class="post-date">{{ section.settings.post_date | default: "Posted on Apr 28, 2017" }}</span>
        <span class="post-category">{{ section.settings.blog_category | default: "Clothing Fashion" }}</span>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-blog-card {
    max-width: 1000px;
    margin: 0 auto;
    font-family: sans-serif;
  }

  .blog-heading {
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 16px;
    margin-bottom: 30px;
    color: #333;
  }

  .image-block {
    width: 100%;
    overflow: hidden;
  }

  .content-block {
    width: 100%;
    padding: 30px;
    border: 1px solid #e1e1e1;
    border-top: none;
    box-sizing: border-box;
  }

  .content-inner {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .blog-title {
    font-size: 24px;
    margin: 0 0 15px 0;
    color: #222;
  }

  .blog-excerpt {
    font-size: 16px;
    line-height: 1.5;
    color: #666;
    margin-bottom: 15px;
    flex-grow: 1;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #999;
    border-top: 1px solid #eee;
    padding-top: 15px;
  }

  @media (max-width: 768px) {
    .content-block {
      padding: 20px;
    }
    
    .blog-title {
      font-size: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Split Blog Card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "FROM THE BLOG"
    },
    {
      "type": "image_picker",
      "id": "blog_image",
      "label": "Blog Post Image"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 300,
      "max": 1000,
      "step": 50,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Post Title",
      "default": "Color pop"
    },
    {
      "type": "textarea",
      "id": "blog_excerpt",
      "label": "Blog Excerpt",
      "default": "As much as we live and breath monochrome styles (and we can all agree a majority of our daily wear is crisp whites and deep blacks), a gals gotta have a..."
    },
    {
      "type": "text",
      "id": "post_date",
      "label": "Post Date",
      "default": "Posted on Apr 28, 2017"
    },
    {
      "type": "text",
      "id": "blog_category",
      "label": "Blog Category",
      "default": "Clothing Fashion"
    }
  ],
  "presets": [
    {
      "name": "Split Blog Card",
      "category": "Blog"
    }
  ]
}
{% endschema %}