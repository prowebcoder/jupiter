{%- assign sid = '#shopify-section-' | append: section.id -%}

{%- liquid
  assign video_position = section.settings.video_position
  assign background_color = section.settings.background_color
-%}

<style>
  {{ sid }} {
    background-color: {{ background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  {{ sid }} .pc-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    align-items: center;
    gap: 20px;
  }

  {{ sid }} .pc-content-wrapper {
    order: {% if video_position == 'right' %}1{% else %}2{% endif %};
    height: 100%;
    align-content: center;
    background: #cccccc2e;
    border-radius: 20px;
    padding: 30px;
  }

  {{ sid }} .pc-media-wrapper {
    order: {% if video_position == 'right' %}2{% else %}1{% endif %};
    position: relative;
  }

  {{ sid }} .pc-review-stars {
    font-size: {{ section.settings.review_size }}px;
    color: {{ section.settings.review_color }};
    margin-bottom: 20px;
  }

  {{ sid }} .pc-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 25px;
    line-height: 1.2;
  }
  {{ sid }} .pc-heading p{
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 25px;
    line-height: 1.2;
  }

  {{ sid }} .pc-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    margin-bottom: 35px;
    max-width: 500px;
  }

  {{ sid }} .pc-cta-button {
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 20px;
    border-radius: 30px;
    display: inline-block;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration:none
  }

  {{ sid }} .pc-press-quotes {
    margin-top: 50px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  {{ sid }} .pc-press-item {
    font-size: 18px;
    color: {{ section.settings.press_color }};
    position: relative;
    padding-left: 25px;
  }
  {{ sid }} .pc-video-wrapper {
    aspect-ratio: 1/1;
    overflow: hidden;
    border-radius: 20px;
  }

  {{ sid }} .pc-video-wrapper video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    {{ sid }} .pc-container {
      grid-template-columns: 1fr;
      gap: 10px;
      margin:10px
    }
    
    {{ sid }} .pc-content-wrapper,
    {{ sid }} .pc-media-wrapper {
      order: initial;
    }
    
    {{ sid }} .pc-heading p{
      font-size: {{ section.settings.heading_size | times: 0.5 }}px;
    }
     {{ sid }} .pc-subheading {
      font-size: {{ section.settings.subheading_size | times: 0.8 }}px;
    }
     {{ sid }} .pc-review-stars {
      font-size: {{ section.settings.review_size | times: 0.8 }}px;
    }
    
    {{ sid }} .pc-press-quotes {
      grid-template-columns: 1fr;
    }
  }
  
</style>

<div class="pc-container">
    <div class="pc-media-wrapper">
    <div class="pc-video-wrapper">
      {%- if section.settings.video != blank -%}
        {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
      {%- else -%}
        {{ 'collection-5' | placeholder_svg_tag: 'pc-placeholder-video' }}
      {%- endif -%}
    </div>
  </div>
  <div class="pc-content-wrapper">
    {%- if section.settings.reviews != blank -%}
      <div class="pc-review-stars">{{ section.settings.reviews }}</div>
    {%- endif -%}

    <h1 class="pc-heading">{{ section.settings.heading }}</h1>
    
    {%- if section.settings.subheading != blank -%}
      <div class="pc-subheading">{{ section.settings.subheading }}</div>
    {%- endif -%}

    {%- if section.settings.button_text != blank -%}
      <a href="{{ section.settings.button_link }}" class="pc-cta-button">
        {{- section.settings.button_text -}}
      </a>
    {%- endif -%}
{% if section.blocks.size > 0 %}
    <div class="pc-press-quotes">
      {%- for block in section.blocks -%}
        <div class="pc-press-item" {{ block.shopify_attributes }}>
          {{ block.settings.quote }}
        </div>
      {%- endfor -%}
    </div>
  {% endif %}
  </div>
  


</div>

