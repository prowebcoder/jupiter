{%- assign sid = '#shopify-section-' | append: section.id -%}

{% style %}
  {{ sid }}.pc-video-carousel-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    {% if section.settings.background_gradient %}
      background: {{ section.settings.gradient }};
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }

  {{ sid }} .pc-video-carousel-container {
    {% if section.settings.container_width == 'full-width' %}
      width: 100%;
      max-width: 100%;
    {% elsif section.settings.container_width == 'narrow' %}
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
    {% else %}
      width: 100%;
      max-width: 1440px;
      margin: 0 auto;
    endif %}
    padding: 0 20px;
  }

  {{ sid }} .pc-video-carousel-header {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: 30px;
  }

  {{ sid }} .pc-video-carousel .slick-slide {
    padding: 0 {{ section.settings.slide_spacing }}px;
  }

  {{ sid }} .pc-video-carousel .slick-list {
    margin: 0 -{{ section.settings.slide_spacing }}px;
  }

  {{ sid }} .pc-video-carousel-header h2 {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: 15px;
    font-weight: {{ section.settings.heading_weight }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    text-transform: {{ section.settings.heading_transform }};
  }

  {{ sid }} .pc-video-carousel-header .description {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
    max-width: 800px;
    margin: 0 auto;
    font-weight: {{ section.settings.description_weight }};
    line-height: 1.6;
  }

  {{ sid }} .pc-video-carousel {
    position: relative;
  }

  {{ sid }} .pc-video-carousel-slide {
    position: relative;
    height: {{ section.settings.desktop_height }}px;
    overflow: hidden;
    border-radius: {{ section.settings.slide_border_radius }}px;
    box-shadow: {{ section.settings.slide_shadow_horizontal }}px {{ section.settings.slide_shadow_vertical }}px {{ section.settings.slide_shadow_blur }}px {{ section.settings.slide_shadow_spread }}px {{ section.settings.slide_shadow_color | color_modify: 'alpha', section.settings.slide_shadow_opacity | divided_by: 100.0 }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  {{ sid }} .pc-video-carousel-slide:hover {
    transform: translateY(-5px);
    box-shadow: {{ section.settings.slide_shadow_horizontal }}px {{ section.settings.slide_shadow_vertical | plus: 5 }}px {{ section.settings.slide_shadow_blur | plus: 5 }}px {{ section.settings.slide_shadow_spread }}px {{ section.settings.slide_shadow_color | color_modify: 'alpha', section.settings.slide_shadow_opacity | divided_by: 100.0 }};
  }

  {{ sid }} .pc-video-carousel-slide video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  {{ sid }} .pc-video-carousel-slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.vertical_alignment }};
    align-items: {{ section.settings.horizontal_alignment }};
    text-align: {{ section.settings.content_alignment }};
    padding: 30px;
    color: white;
    z-index: 2;
    {% if section.settings.show_overlay %}
      background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity | divided_by: 100.0 }};
    {% endif %}
  }

  {{ sid }} .pc-video-carousel-slide-content {
    max-width: 80%;
    {% if section.settings.content_alignment == 'left' %}
      margin-right: auto;
    {% elsif section.settings.content_alignment == 'right' %}
      margin-left: auto;
    {% else %}
      margin: 0 auto;
    {% endif %}
  }

  {{ sid }} .pc-video-carousel-slide h3 {
    color: {{ block.settings.title_color | default: '#ffffff' }};
    font-size: 24px;
    margin-bottom: 15px;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
  }

  {{ sid }} .pc-video-carousel-slide .slide-description {
    color: {{ block.settings.description_color | default: '#ffffff' }};
    margin-bottom: 20px;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
  }

  {{ sid }} .pc-video-carousel-slide .slide-button {
    display: inline-block;
    padding: 12px 30px;
    background-color: {{ block.settings.button_bg_color | default: '#000000' }};
    color: {{ block.settings.button_color | default: '#ffffff' }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    font-weight: 600;
    border: 1px solid transparent;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 1px;
  }

  {{ sid }} .pc-video-carousel-slide .slide-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    {% if block.settings.button_hover_bg_color != blank %}
      background-color: {{ block.settings.button_hover_bg_color }};
    {% else %}
      background-color: {{ block.settings.button_bg_color | default: '#000000' | color_darken: 10 }};
    {% endif %}
  }

  {{ sid }} .pc-video-carousel-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background-color: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 3;
    backdrop-filter: blur(5px);
    border: 2px solid rgba(255,255,255,0.3);
    transition: all 0.3s ease;
  }

  {{ sid }} .pc-video-carousel-play-button:hover {
    background-color: rgba(255,255,255,0.3);
    transform: translate(-50%, -50%) scale(1.05);
  }

  {{ sid }} .pc-video-carousel-play-button svg {
    width: 30px;
    height: 30px;
    fill: white;
    margin-left: 5px;
  }

  {{ sid }} .pc-video-carousel-cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* Navigation arrows */
  {{ sid }} .pc-video-carousel .slick-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 4;
    width: 60px;
    height: 60px;
    background-color: rgba(255,255,255,0.9);
    border-radius: 50%;
    display: flex !important;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    opacity: 0.8;
  }

  {{ sid }} .pc-video-carousel .slick-arrow:hover {
    background-color: rgba(255,255,255,1);
    opacity: 1;
    transform: translateY(-50%) scale(1.05);
  }

  {{ sid }} .pc-video-carousel .slick-prev {
    left: 25px;
  }

  {{ sid }} .pc-video-carousel .slick-next {
    right: 25px;
  }

  {{ sid }} .pc-video-carousel .slick-arrow svg {
    width: 25px;
    height: 25px;
    color: #333;
  }

  {{ sid }} .pc-video-carousel .slick-prev svg {
    transform: rotate(0deg);
  }
  {{ sid }} .pc-video-carousel .slick-next svg {
    transform: rotate(360deg);
  }
  /* Dots navigation */
  {{ sid }} .pc-video-carousel .slick-dots {
    position: absolute;
    bottom: 30px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 0;
    z-index: 4;
  }

  {{ sid }} .pc-video-carousel .slick-dots li {
    margin: 0 8px;
  }

  {{ sid }} .pc-video-carousel .slick-dots button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.5);
    border: none;
    text-indent: -9999px;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  {{ sid }} .pc-video-carousel .slick-dots .slick-active button {
    background-color: white;
    transform: scale(1.3);
  }

  /* Responsive styles */
  @media (max-width: 1024px) {
    {{ sid }} .pc-video-carousel-slide {
      height: {{ section.settings.desktop_height | times: 0.8 }}px;
    }

    {{ sid }} .pc-video-carousel .slick-arrow {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 768px) {
    {{ sid }} .pc-video-carousel-slide {
      height: {{ section.settings.mobile_height }}px;
    }

    {{ sid }} .pc-video-carousel-header h2 {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    {{ sid }} .pc-video-carousel-header .description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    {{ sid }} .pc-video-carousel-slide-content {
      max-width: 90%;
    }

    {{ sid }} .pc-video-carousel-slide h3 {
      font-size: 20px;
    }

    {{ sid }} .pc-video-carousel .slick-arrow {
      width: 40px;
      height: 40px;
    }

    {{ sid }} .pc-video-carousel .slick-arrow svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    {{ sid }} .pc-video-carousel-header h2 {
      font-size: {{ section.settings.heading_size | times: 0.7 }}px;
    }

    {{ sid }} .pc-video-carousel-header .description {
      font-size: {{ section.settings.description_size | times: 0.8 }}px;
    }

    {{ sid }} .pc-video-carousel-slide h3 {
      font-size: 18px;
    }

    {{ sid }} .pc-video-carousel-slide .slide-button {
      padding: 10px 20px;
      font-size: 12px;
    }

    {{ sid }} .pc-video-carousel-play-button {
      width: 60px;
      height: 60px;
    }

    {{ sid }} .pc-video-carousel-play-button svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 768px) {
    {{ sid }} .pc-video-carousel .slick-slide {
      padding: 0 {{ section.settings.slide_spacing | divided_by: 2 }}px;
    }

    {{ sid }} .pc-video-carousel .slick-list {
      margin: 0 -{{ section.settings.slide_spacing | divided_by: 2 }}px;
    }
  }
      {% endif %}
{% endstyle %}

<div class="pc-video-carousel-section">
  <div class="pc-video-carousel-container">
    {% if section.settings.heading != blank or section.settings.description != blank %}
      <div class="pc-video-carousel-header">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <div class="description">{{ section.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="pc-video-carousel"
      data-slides-to-show="{{ section.settings.slides_to_show }}"
      data-slides-to-show-tablet="{{ section.settings.slides_to_show_tablet }}"
      data-slides-to-show-mobile="{{ section.settings.slides_to_show_mobile }}"
      data-autoplay="{{ section.settings.autoplay }}"
      data-autoplay-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
      data-arrows="{{ section.settings.show_arrows }}"
      data-dots="{{ section.settings.show_dots }}"
      data-infinite="{{ section.settings.infinite_scroll }}"
    >
      {% for block in section.blocks %}
        {% if block.type == 'video' %}
          <div class="pc-video-carousel-slide" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="pc-video-carousel-slide-link">
            {% endif %}

            {% if block.settings.video %}
              <video
                {% if block.settings.cover_image %}
                  poster="{{ block.settings.cover_image | img_url: '800x' }}"
                {% endif %}
                {% if section.settings.mute_videos %}
                  muted
                {% endif %}
                {% if section.settings.loop_videos %}
                  loop
                {% endif %}
                {% unless section.settings.show_video_controls %}
                  controlslist="nodownload nofullscreen noremoteplayback"
                {% endunless %}
                playsinline
                disablePictureInPicture
                {% if section.settings.show_video_controls %}
                  controls
                {% endif %}
              >
                <source
                  src="{{ block.settings.video.sources[1].url }}"
                  type="{{ block.settings.video.sources[1].mime_type }}"
                >
              </video>
            {% endif %}

            {% if block.settings.cover_image and block.settings.video == null %}
              <img
                src="{{ block.settings.cover_image | img_url: '800x' }}"
                alt="{{ block.settings.cover_image.alt }}"
                class="pc-video-carousel-cover"
              >
            {% endif %}

            <div class="pc-video-carousel-slide-overlay">
              <div class="pc-video-carousel-slide-content">
                {% if block.settings.title != blank %}
                  <h3 style="color: {{ block.settings.title_color }}">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="slide-description" style="color: {{ block.settings.description_color }}">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
                {% if block.settings.button_text != blank and block.settings.link != blank %}
                  <a
                    href="{{ block.settings.link }}"
                    class="slide-button"
                    style="color: {{ block.settings.button_color }}; background-color: {{ block.settings.button_bg_color }}"
                  >
                    {{- block.settings.button_text -}}
                  </a>
                {% endif %}
              </div>
            </div>

            {% if section.settings.show_play_button and block.settings.video %}
              <div class="pc-video-carousel-play-button">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            {% endif %}

            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize slick carousel
    function initVideoCarousel() {
      const carousel = document.querySelector('.pc-video-carousel');
      if (!carousel) return;

      const slidesToShow = parseInt(carousel.dataset.slidesToShow) || 3;
      const slidesToShowTablet = parseInt(carousel.dataset.slidesToShowTablet) || 2;
      const slidesToShowMobile = parseInt(carousel.dataset.slidesToShowMobile) || 1;
      const autoplay = carousel.dataset.autoplay === 'true';
      const autoplaySpeed = parseInt(carousel.dataset.autoplaySpeed) || 5000;
      const arrows = carousel.dataset.arrows === 'true';
      const dots = carousel.dataset.dots === 'true';
      const infinite = carousel.dataset.infinite === 'true';

      $(carousel).slick({
        slidesToShow: slidesToShow,
        slidesToScroll: 1,
        autoplay: autoplay,
        autoplaySpeed: autoplaySpeed,
        arrows: arrows,
        dots: dots,
        infinite: infinite,
        centerMode: false,
        variableWidth: false,
        prevArrow: '<button type="button" class="slick-prev"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/></svg></button>',
        nextArrow: '<button type="button" class="slick-next"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/></svg></button>',
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: slidesToShowTablet,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 768,
            settings: {
              slidesToShow: slidesToShowMobile,
              slidesToScroll: 1,
              arrows: arrows && window.innerWidth > 480
            }
          }
        ]
      });

      // Play/pause videos when changing slides
      $(carousel).on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        const currentVideo = slick.$slides.eq(currentSlide).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
        }
      });

      $(carousel).on('afterChange', function(event, slick, currentSlide) {
        const nextVideo = slick.$slides.eq(currentSlide).find('video')[0];
        if (nextVideo && autoplay) {
          nextVideo.play().catch(e => console.log('Autoplay prevented:', e));
        }
      });

      // Play button functionality
      document.querySelectorAll('.pc-video-carousel-play-button').forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();

          const slide = this.closest('.pc-video-carousel-slide');
          const video = slide.querySelector('video');
          const cover = slide.querySelector('.pc-video-carousel-cover');

          if (video) {
            if (video.paused) {
              video.play().catch(e => {
                // If play was prevented (often due to autoplay policies), mute and try again
                video.muted = true;
                video.play();
              });
              this.style.display = 'none';
              if (cover) cover.style.display = 'none';
            } else {
              video.pause();
              this.style.display = 'flex';
            }
          }
        });
      });

      // Handle video play state when clicking on slide
      document.querySelectorAll('.pc-video-carousel-slide').forEach(slide => {
        slide.addEventListener('click', function(e) {
          if (e.target.closest('.slide-button') || e.target.closest('.pc-video-carousel-play-button')) {
            return;
          }

          const video = this.querySelector('video');
          const playButton = this.querySelector('.pc-video-carousel-play-button');

          if (video) {
            if (video.paused) {
              video.play().catch(e => {
                video.muted = true;
                video.play();
              });
              if (playButton) playButton.style.display = 'none';
            } else {
              video.pause();
              if (playButton) playButton.style.display = 'flex';
            }
          }
        });
      });

      // Pause videos when they're not visible
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          const video = entry.target;
          if (entry.isIntersecting) {
            if (autoplay && !video.paused) {
              video.play().catch(e => {
                video.muted = true;
                video.play();
              });
            }
          } else {
            if (!video.paused) {
              video.pause();
              const playButton = entry.target.closest('.pc-video-carousel-slide').querySelector('.pc-video-carousel-play-button');
              if (playButton) playButton.style.display = 'flex';
            }
          }
        });
      }, { threshold: 0.5 });

      document.querySelectorAll('.pc-video-carousel-slide video').forEach(video => {
        observer.observe(video);
      });
    }

    // Load slick only when needed
    if (typeof jQuery === 'undefined') {
      const script = document.createElement('script');
      script.src = 'https://code.jquery.com/jquery-3.6.0.min.js';
      script.onload = function() {
        const slickScript = document.createElement('script');
        slickScript.src = 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js';
        slickScript.onload = initVideoCarousel;
        document.head.appendChild(slickScript);

        const slickStyles = document.createElement('link');
        slickStyles.rel = 'stylesheet';
        slickStyles.href = 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css';
        document.head.appendChild(slickStyles);
      };
      document.head.appendChild(script);
    } else if (typeof $.fn.slick === 'undefined') {
      const slickScript = document.createElement('script');
      slickScript.src = 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js';
      slickScript.onload = initVideoCarousel;
      document.head.appendChild(slickScript);

      const slickStyles = document.createElement('link');
      slickStyles.rel = 'stylesheet';
      slickStyles.href = 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css';
      document.head.appendChild(slickStyles);
    } else {
      initVideoCarousel();
    }
  });
</script>

