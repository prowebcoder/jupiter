  {% assign font_size_class = '' %}
  {% if text_size == 'small' %}
    {% assign font_size_class = 'text-sm' %}
  {% elsif text_size == 'medium' %}
    {% assign font_size_class = 'text-base' %}
  {% elsif text_size == 'large' %}
    {% assign font_size_class = 'text-lg' %}
  {% endif %}

