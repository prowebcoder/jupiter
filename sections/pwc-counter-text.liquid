  <style>
    {{ 'pricing-table.css' | asset_url | stylesheet_tag }}
</style>

  <ul class="pricing-table">
  {% for block in section.blocks %}
    {% assign plan = block.settings %}
    <li class="pricing-table__item {% if plan.popular %}pricing-table__item--popular{% endif %}" {% if plan.popular %}data-popular="Popular"{% endif %}>
      {% if plan.image %}
        <img src="{{ plan.image | image_url }}" alt="" class="pricing-table__img" />
      {% endif %}
      <h3 class="pricing-table__title">{{ plan.title }}</h3>
      <p class="pricing-table__description">
        <span class="pricing-table__tagline">{{ plan.tagline }}</span>
        <span class="pricing-table__price">{{ plan.price }}</span>
        <span class="pricing-table__label">{{ plan.label }}</span>
        <span class="pricing-table__save">{{ plan.save }}</span>
      </p>
      <ul class="pricing-table__products">
        {% assign included = plan.included_items | split: ',' %}
        {% for item in included %}
          <li class="pricing-table__product"><a href="#">{{ item | strip }}</a></li>
        {% endfor %}

        {% assign excluded = plan.excluded_items | split: ',' %}
        {% for item in excluded %}
          <li class="pricing-table__product pricing-table__product--excluded"><a href="#">{{ item | strip }}</a></li>
        {% endfor %}
      </ul>
      <a href="{{ plan.button_link }}" class="pricing-table__button">{{ plan.button_text }}</a>
    </li>
  {% endfor %}
</ul>



{% schema %}
{
  "name": "Pricing Table",
  "tag": "section",
  "class": "pricing-table-wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Plan Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Package Title",
          "default": "Package Title"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline",
          "default": "The tagline goes here"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "800"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label (Original Price)",
          "default": "900 is the real price"
        },
        {
          "type": "text",
          "id": "save",
          "label": "Save Text",
          "default": "You save 100"
        },
        {
          "type": "textarea",
          "id": "included_items",
          "label": "Included Items (comma-separated)",
          "default": "Included item 1,Included item 2"
        },
        {
          "type": "textarea",
          "id": "excluded_items",
          "label": "Excluded Items (comma-separated)",
          "default": "Excluded item 1,Excluded item 2"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Continue"
        },
        {
          "type": "checkbox",
          "id": "popular",
          "label": "Mark as Popular?",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Pwc Pricing Table",
      "category": "Custom"
    }
  ]
}
{% endschema %}