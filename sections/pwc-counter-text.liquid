<!-- sections/fact-success.liquid -->
<section class="fact-success-section bg-light py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6 text-center">
        <h3 class="fs-6 text-secondary mb-2 text-uppercase">{{ section.settings.subtitle }}</h3>
        <h2 class="mb-4 display-5">{{ section.settings.title }}</h2>
        <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row gy-4 gy-lg-0 align-items-lg-center">
      <div class="col-12 col-lg-6">
        <img class="img-fluid rounded" loading="lazy" src="{{ section.settings.image | image_url }}" alt="Our Success">
      </div>
      <div class="col-12 col-lg-6">
        <div class="row justify-content-xl-end">
          <div class="col-12 col-xl-11">
            <div class="row gy-4 gy-sm-0 overflow-hidden">
              {% for block in section.blocks %}
                <div class="col-12 col-sm-6 {% if forloop.index > 2 %}mt-lg-6 mt-xxl-8{% endif %} {% if forloop.index == 1 or forloop.index == 3 %}mb-4{% endif %}">
                  <div class="card border-0 border-bottom border-primary shadow-sm">
                    <div class="card-body text-center p-4 p-xxl-5">
                      <h3 class="display-2 fw-bold mb-2">{{ block.settings.stat }}</h3>
                      <p class="fs-5 mb-0 text-secondary">{{ block.settings.label }}</p>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .fact-success-section .card {
    transition: transform 0.3s ease;
  }

  .fact-success-section .card:hover {
    transform: translateY(-5px);
  }
</style>

{% schema %}
{
  "name": "Fact Success Section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our Success"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "We have a proven track record of success."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat Block",
      "settings": [
        {
          "type": "text",
          "id": "stat",
          "label": "Statistic",
          "default": "60"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Finished Projects"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Fact Success Section",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "stat": "60",
            "label": "Finished Projects"
          }
        },
        {
          "type": "stat",
          "settings": {
            "stat": "18k+",
            "label": "Issues Solved"
          }
        },
        {
          "type": "stat",
          "settings": {
            "stat": "10k+",
            "label": "Happy Customers"
          }
        },
        {
          "type": "stat",
          "settings": {
            "stat": "78",
            "label": "Awwwards"
          }
        }
      ]
    }
  ]
}
{% endschema %}
