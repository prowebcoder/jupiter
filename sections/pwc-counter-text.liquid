      <li class="pc-pricing-table__product included">
        <a href="#">
          {{ item_trimmed }}
        </a>
      </li>
    {% endfor %}

    {%- assign excluded = block.settings.excluded_items | split: ',' -%}
    {% for item in excluded %}
      {% assign item_trimmed = item | strip %}
      <li class="pc-pricing-table__product excluded">
        <a href="#" class="excluded">
          <s>{{ item_trimmed }}</s>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endfor %}



