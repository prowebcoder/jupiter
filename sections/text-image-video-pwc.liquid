{% assign sec_id = '#shopify-section-' | append: section.id %}


  <style>
  {{ sec_id }} .pc-section-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    background-color: #fff;
  }

  {{ sec_id }} .pc-section {
    display: flex;
    flex-wrap: nowrap;
    align-items: stretch;
    justify-content: space-between;
    gap: 0;
    height: 600px;
  }

  {{ sec_id }} .pc-left,
  {{ sec_id }} .pc-right {
    width: 50%;
    padding: 0 20px;
    box-sizing: border-box;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  {{ sec_id }} .pc-text-content {
    height: 40%;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.text_position }};
  }

  {{ sec_id }} .pc-text-content h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: {{ section.settings.heading_font_weight }};
    margin-bottom: 12px;
  }

  {{ sec_id }} .pc-text-content p {
    margin-bottom: 18px;
    font-size: 2rem;
    line-height: 1.5;
  }

  {{ sec_id }} .pc-button-wrapper {
    text-align: {{ section.settings.button_alignment }};
  }

  {{ sec_id }} .pc-button {
    padding: 8px 18px;
    font-size: 1.6rem;
    border: 1px solid black;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-top: 10px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: 
      {% if section.settings.button_shape == 'pill' %}
        50px;
      {% elsif section.settings.button_shape == 'rectangle' %}
        6px;
      {% else %}
        0;
      {% endif %};
  }

  {{ sec_id }} .pc-button:hover {
    background-color: black;
    color: white;
  }

  {{ sec_id }} .pc-image {
    height: 60%;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  {{ sec_id }} .pc-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-width: 100%;
  }

  {{ sec_id }} .pc-video-wrapper {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 8px;
  }

  {{ sec_id }} .pc-video-wrapper iframe,
  {{ sec_id }} .pc-video-wrapper video {
    width: 100%;
    height: 100%;
    border: none;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    {{ sec_id }} .pc-section {
      flex-direction: column;
      height: auto;
    }

    {{ sec_id }} .pc-left,
    {{ sec_id }} .pc-right {
      width: 100%;
      padding: 0;
      height: auto;
    }

    {{ sec_id }} .pc-text-content {
      height: auto;
    }

    {{ sec_id }} .pc-image {
      height: auto;
      justify-content: center;
      margin-top: 20px;
    }

    {{ sec_id }} .pc-image img {
      width: 60%;
      height: auto;
    }

    {{ sec_id }} .pc-video-wrapper {
      height: 300px;
    }
  }
</style>

<div class="pc-section-wrapper {% if section.settings.width_option == 'full' %}full-width{% else %}boxed-width{% endif %}">
  <div class="pc-section">
    {% if section.settings.media_position == 'left' %}
      <div class="pc-left">
        {% if section.settings.shopify_video %}
          <div class="pc-video-wrapper">
            <video autoplay muted loop playsinline controls>
              <source src="{{ section.settings.shopify_video | file_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
        {% elsif section.settings.video_url %}
          <div class="pc-video-wrapper">
            {% if section.settings.video_url contains "youtube.com" or section.settings.video_url contains "youtu.be" %}
              {% assign yt_id = section.settings.video_url | split: 'v=' | last | split: '&' | first %}
              <iframe src="https://www.youtube.com/embed/{{ yt_id }}?autoplay=1&mute=1&loop=1&playlist={{ yt_id }}" allow="autoplay; muted; loop" allowfullscreen></iframe>
            {% elsif section.settings.video_url contains "vimeo.com" %}
              {% assign vimeo_id = section.settings.video_url | split: '/' | last %}
              <iframe src="https://player.vimeo.com/video/{{ vimeo_id }}?autoplay=1&muted=1&loop=1&background=1" allowfullscreen></iframe>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <div class="pc-right">
        <div class="pc-text-content">
          <h2>{{ section.settings.heading }}</h2>
          {% if section.settings.button_text and section.settings.button_link %}
            <div class="pc-button-wrapper">
              <a href="{{ section.settings.button_link }}" class="pc-button">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}
        </div>

        {% if section.settings.image %}
          <div class="pc-image">
            <img src="{{ section.settings.image | image_url: width: 700 }}" alt="Section Image" loading="lazy">
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="pc-left">
        <div class="pc-text-content">
          <h2>{{ section.settings.heading }}</h2>
          {% if section.settings.button_text and section.settings.button_link %}
            <div class="pc-button-wrapper">
              <a href="{{ section.settings.button_link }}" class="pc-button">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}
        </div>

        {% if section.settings.image %}
          <div class="pc-image">
            <img src="{{ section.settings.image | image_url: width: 700 }}" alt="Section Image" loading="lazy">
          </div>
        {% endif %}
      </div>

      <div class="pc-right">
        {% if section.settings.shopify_video %}
          <div class="pc-video-wrapper">

             <video controls autoplay muted loop playsinline>
      <source src="{{ section.settings.shopify_video | video_tag }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>


            
          </div>
        {% elsif section.settings.video_url %}
          <div class="pc-video-wrapper">
            {% if section.settings.video_url contains "youtube.com" or section.settings.video_url contains "youtu.be" %}
              {% assign yt_id = section.settings.video_url | split: 'v=' | last | split: '&' | first %}
              <iframe src="https://www.youtube.com/embed/{{ yt_id }}?autoplay=1&mute=1&loop=1&playlist={{ yt_id }}" allow="autoplay; muted; loop" allowfullscreen></iframe>
            {% elsif section.settings.video_url contains "vimeo.com" %}
              {% assign vimeo_id = section.settings.video_url | split: '/' | last %}
              <iframe src="https://player.vimeo.com/video/{{ vimeo_id }}?autoplay=1&muted=1&loop=1&background=1" allowfullscreen></iframe>
            {% endif %}
            
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>



{% schema %}
{
  "name": "PC Text Image Video",
  "class": "pc-text-image-video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading here"
    },
    {
      "type": "select",
      "id": "width_option",
      "label": "Section Width",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed (max-width 1200px)" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {
      "type": "select",
      "id": "media_position",
      "label": "Media Position",
      "default": "right",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "number",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 40
    },
    {
      "type": "select",
      "id": "heading_font_weight",
      "label": "Heading Font Weight",
      "default": "400",
      "options": [
        { "value": "100", "label": "Thin (100)" },
        { "value": "200", "label": "Extra Light (200)" },
        { "value": "300", "label": "Light (300)" },
        { "value": "400", "label": "Normal (400)" },
        { "value": "500", "label": "Medium (500)" },
        { "value": "600", "label": "Semi Bold (600)" },
        { "value": "700", "label": "Bold (700)" },
        { "value": "800", "label": "Extra Bold (800)" },
        { "value": "900", "label": "Black (900)" }
      ]
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "button_shape",
      "label": "Button Shape",
      "default": "square",
      "options": [
        { "value": "square", "label": "Square" },
        { "value": "pill", "label": "Pill" },
        { "value": "rectangle", "label": "Rectangle" }
      ]
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button Position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text & Button Vertical Position",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bottom Image"
    },
    {
      "type": "video",
      "id": "shopify_video",
      "label": "Shopify Hosted Video"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL (YouTube or Vimeo)",
      "accept": ["youtube", "vimeo"]
    }
  ],
  "presets": [
    {
      "name": "PC Text + Image + Video"
    }
  ]
}
{% endschema %}
