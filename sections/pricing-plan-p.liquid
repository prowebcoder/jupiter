{%- style -%}
    .pc-pricing-section {
      padding: {{ section.settings.section_padding_top }}rem 0 {{ section.settings.section_padding_bottom }}rem;
      background-color: {{ section.settings.background_color }};
      font-family: {{ section.settings.font_family }};
      {% if section.settings.background_image != blank %}
        background-image: url('{{ section.settings.background_image | img_url: '2000x' }}');
        background-size: cover;
        background-position: center;
        background-attachment: {% if section.settings.parallax_effect %}fixed{% else %}scroll{% endif %};
        background-repeat: no-repeat;
        position: relative;
      {% endif %}
    }

    {% if section.settings.background_image != blank %}
      .pc-pricing-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
      }
    {% endif %}

    .pc-container {
      max-width: {{ section.settings.container_width }}px;
      margin: 0 auto;
      padding: 0 {{ section.settings.container_padding }}px;
      position: relative;
    }

    .pc-section-title {
      text-align: {{ section.settings.heading_alignment }};
      margin-bottom: {{ section.settings.heading_margin_bottom }}rem;
      font-size: {{ section.settings.heading_font_size }}px;
      font-weight: {{ section.settings.heading_font_weight }};
      color: {{ section.settings.heading_color }};
      text-transform: {{ section.settings.heading_text_transform }};
      letter-spacing: {{ section.settings.heading_letter_spacing }}px;
      line-height: {{ section.settings.heading_line_height }};
    }

    .pc-pricing-plans {
      display: flex;
      justify-content: {{ section.settings.plans_alignment }};
      flex-wrap: wrap;
      gap: {{ section.settings.plans_gap }}px;
    }

    .pc-pricing-card {
      background-color: {{ section.settings.card_background_color }};
      border-radius: {{ section.settings.card_border_radius }}px;
      box-shadow: {{ section.settings.card_box_shadow_horizontal }}px {{ section.settings.card_box_shadow_vertical }}px {{ section.settings.card_box_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.card_box_shadow_opacity }});
      width: 100%;
      flex: 1 1 calc({{ section.settings.card_width }}% - {{ section.settings.plans_gap }}px);
      min-width: {{ section.settings.card_min_width }}px;
      max-width: {{ section.settings.card_max_width }}px;
      padding: {{ section.settings.card_padding_top }}px {{ section.settings.card_padding_sides }}px {{ section.settings.card_padding_bottom }}px;
      text-align: {{ section.settings.card_text_alignment }};
      transition: transform {{ section.settings.card_hover_animation_speed }}s ease, box-shadow {{ section.settings.card_hover_animation_speed }}s ease;
      position: relative;
      overflow: hidden;
      border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    }

    .pc-pricing-card:hover {
      transform: translateY(-{{ section.settings.card_hover_lift }}px);
      box-shadow: {{ section.settings.card_hover_box_shadow_horizontal }}px {{ section.settings.card_hover_box_shadow_vertical }}px {{ section.settings.card_hover_box_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.card_hover_box_shadow_opacity }});
    }

    .pc-pricing-card.popular::before {
      content: "{{ section.settings.popular_badge_text }}";
      position: absolute;
      top: {{ section.settings.badge_position_top }}px;
      right: -{{ section.settings.badge_position_right }}px;
      background-color: {{ section.settings.accent_color }};
      color: {{ section.settings.badge_text_color }};
      padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
      font-size: {{ section.settings.badge_font_size }}px;
      font-weight: {{ section.settings.badge_font_weight }};
      transform: rotate(45deg);
      width: {{ section.settings.badge_width }}px;
      text-align: center;
    }

    .pc-plan-name {
      font-size: {{ section.settings.plan_name_font_size }}px;
      font-weight: {{ section.settings.plan_name_font_weight }};
      margin-bottom: {{ section.settings.plan_name_margin_bottom }}px;
      color: {{ section.settings.plan_name_color }};
    }

    .pc-plan-price {
      font-size: {{ section.settings.plan_price_font_size }}px;
      font-weight: {{ section.settings.plan_price_font_weight }};
      margin-bottom: {{ section.settings.plan_price_margin_bottom }}px;
      color: {{ section.settings.primary_color }};
    }

    .pc-plan-price span {
      font-size: {{ section.settings.plan_price_small_font_size }}px;
      font-weight: {{ section.settings.plan_price_small_font_weight }};
    }

    .pc-plan-features {
      list-style: none;
      margin-bottom: {{ section.settings.features_margin_bottom }}px;
      padding: 0;
    }

    .pc-plan-features li {
      padding: {{ section.settings.feature_padding_vertical }}px 0;
      border-bottom: {{ section.settings.feature_border_width }}px solid {{ section.settings.feature_border_color }};
      color: {{ section.settings.feature_text_color }};
      font-size: {{ section.settings.feature_font_size }}px;
      line-height: {{ section.settings.feature_line_height }};
    }

    .pc-plan-features li:last-child {
      border-bottom: none;
    }

    .pc-btn {
      display: inline-block;
      padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
      background-color: {{ section.settings.primary_color }};
      color: {{ section.settings.button_text_color }};
      border: none;
      border-radius: {{ section.settings.button_border_radius }}px;
      font-size: {{ section.settings.button_font_size }}px;
      font-weight: {{ section.settings.button_font_weight }};
      cursor: pointer;
      transition: all {{ section.settings.button_hover_animation_speed }}s ease;
      text-transform: {{ section.settings.button_text_transform }};
      letter-spacing: {{ section.settings.button_letter_spacing }}px;
      text-decoration: none;
      min-width: {{ section.settings.button_min_width }}px;
      border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    }

    .pc-btn:hover {
      background-color: {{ section.settings.secondary_color }};
      transform: translateY(-{{ section.settings.button_hover_lift }}px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, {{ section.settings.button_hover_shadow_opacity }});
      color: {{ section.settings.button_hover_text_color }};
      border-color: {{ section.settings.button_hover_border_color }};
    }

    .pc-btn-vip {
      background-color: {{ section.settings.accent_color }};
      {% if section.settings.vip_button_border_color != blank %}
        border-color: {{ section.settings.vip_button_border_color }};
      {% endif %}
    }

    .pc-btn-vip:hover {
      background-color: {{ section.settings.accent_color_hover }};
    }

    .pc-plan-image {
      margin-bottom: {{ section.settings.plan_image_margin_bottom }}px;
      border-radius: {{ section.settings.plan_image_border_radius }}px;
      overflow: hidden;
      height: {{ section.settings.plan_image_height }}px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .pc-plan-image img {
      width: 100%;
      height: 100%;
      object-fit: {{ section.settings.plan_image_fit }};
      {% if section.settings.plan_image_fit == 'contain' %}
        padding: 10px;
      {% endif %}
    }
    @media screen and (max-width: 768px) {
    .pc-plan-image img {
      width: 36%;
  }
  }

    @media (max-width: 768px) {
      .pc-pricing-plans {
        flex-direction: column;
        align-items: center;
      }

      .pc-pricing-card {
        flex: 1 1 100%;
        max-width: 100%;
      }

      .pc-section-title {
        font-size: {{ section.settings.heading_font_size_mobile }}px;
      }

      .pc-plan-image {
        height: auto;
        max-height: {{ section.settings.plan_image_height_mobile }}px;
      }
    }
{%- endstyle -%}

<section class="pc-pricing-section">
  <div class="pc-container">
    <h2 class="pc-section-title">{{ section.settings.heading }}</h2>

    <div class="pc-pricing-plans">
      {%- for block in section.blocks -%}
        <div
          class="pc-pricing-card {% if block.settings.highlight_plan %}popular{% endif %}"
          style="flex: 1 1 calc({{ block.settings.block_width }}% - {{ section.settings.plans_gap }}px);"
        >
          {% if block.settings.plan_image != blank %}
            <div class="pc-plan-image">
              <img
                src="{{ block.settings.plan_image | img_url: section.settings.plan_image_size }}"
                alt="{{ block.settings.plan_name }}"
                loading="lazy"
                width="{{ block.settings.plan_image.width }}"
                height="{{ block.settings.plan_image.height }}"
              >
            </div>
          {% endif %}
          <h3 class="pc-plan-name">{{ block.settings.plan_name }}</h3>
          <div class="pc-plan-price">{{ block.settings.plan_price }}</div>
          <ul class="pc-plan-features">
            {%- assign features = block.settings.plan_features | newline_to_br | split: '<br />' -%}
            {%- for feature in features -%}
              {%- if feature != blank -%}
                <li>{{ feature }}</li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
          <a
            href="{{ block.settings.button_link }}"
            class="pc-btn {% if block.settings.is_vip_plan %}pc-btn-vip{% endif %}"
          >
            {{ block.settings.button_text }}
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

