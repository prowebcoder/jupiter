{% assign sec_id = '#shopify-section-' | append: section.id %}

<pc-testimonial-slider data-section-id="{{ section.id }}">
  <div class="pc-testimonial-slider__container">
    {% for block in section.blocks %}
      <div class="pc-testimonial-slider__item">
        <div class="pc-testimonial-slider__image">
          {% if block.settings.image != blank %}
            {{-
              block.settings.image
              | image_url: width: block.settings.image.width, height: block.settings.image.height
              | image_tag: loading: 'lazy', preload: true, alt: block.settings.image.alt
            -}}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag }}
          {% endif %}
        </div>
        <div class="pc-testimonial-slider__content">
          <p class="pc-testimonial-slider__text">{{ block.settings.text }}</p>
          <p class="pc-testimonial-slider__author">{{ block.settings.author }}</p>
        </div>
      </div>
    {% endfor %}
    <div class="pc-testimonial-slider__arrows">
      <button class="pc-testimonial-slider__arrow pc-testimonial-slider__arrow--prev" aria-label="Previous">
        <svg width="24" height="24" viewBox="0 0 24 24">
          <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="pc-testimonial-slider__arrow pc-testimonial-slider__arrow--next" aria-label="Next">
        <svg width="24" height="24" viewBox="0 0 24 24">
          <path d="M9 6l6 6-6 6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</pc-testimonial-slider>

<style>
  {{ sec_id }} .pc-testimonial-slider__container {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding-top: {{ section.settings.desktop_padding_top }}px;
    padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    background-color: {{ section.settings.desktop_background_color }};
    box-shadow: {% if section.settings.desktop_box_shadow %}0 4px 10px rgba(0,0,0,0.1){% else %}none{% endif %};
  }

  {{ sec_id }} .pc-testimonial-slider__item {
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 20px;
  }

  {{ sec_id }} .pc-testimonial-slider__image img {
    max-width: 100px;
    border-radius: 50%;
  }

  {{ sec_id }} .pc-testimonial-slider__text {
    font-size: {{ section.settings.desktop_font_size }}px;
    color: {{ section.settings.desktop_text_color }};
    margin-top: 15px;
  }

  {{ sec_id }} .pc-testimonial-slider__author {
    font-size: {{ section.settings.desktop_author_font_size }}px;
    color: {{ section.settings.desktop_author_color }};
    margin-top: 5px;
  }

  {{ sec_id }} .pc-testimonial-slider__arrows {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    padding: 0 10px;
  }

  {{ sec_id }} .pc-testimonial-slider__arrow {
    background: none;
    border: none;
    cursor: pointer;
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-testimonial-slider__container {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      background-color: {{ section.settings.mobile_background_color }};
      box-shadow: {% if section.settings.mobile_box_shadow %}0 4px 10px rgba(0,0,0,0.1){% else %}none{% endif %};
    }

    {{ sec_id }} .pc-testimonial-slider__text {
      font-size: {{ section.settings.mobile_font_size }}px;
      color: {{ section.settings.mobile_text_color }};
    }

    {{ sec_id }} .pc-testimonial-slider__author {
      font-size: {{ section.settings.mobile_author_font_size }}px;
      color: {{ section.settings.mobile_author_color }};
    }
  }
</style>

<script>
  class PcTestimonialSlider extends HTMLElement {
    constructor() {
      super();
      this.currentIndex = 0;
    }

    connectedCallback() {
      this.items = this.querySelectorAll('.pc-testimonial-slider__item');
      this.totalItems = this.items.length;
      this.showItem(this.currentIndex);

      this.querySelector('.pc-testimonial-slider__arrow--prev')?.addEventListener('click', () => this.prev());
      this.querySelector('.pc-testimonial-slider__arrow--next')?.addEventListener('click', () => this.next());
    }

    showItem(index) {
      this.items.forEach((item, i) => {
        item.style.display = i === index ? 'block' : 'none';
      });
    }

    prev() {
      this.currentIndex = (this.currentIndex - 1 + this.totalItems) % this.totalItems;
      this.showItem(this.currentIndex);
    }

    next() {
      this.currentIndex = (this.currentIndex + 1) % this.totalItems;
      this.showItem(this.currentIndex);
    }
  }

  customElements.define('pc-testimonial-slider', PcTestimonialSlider);
</script>

