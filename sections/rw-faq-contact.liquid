{% stylesheet %}
  .faq-contact-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    padding: 40px 20px;
    background-color: var(--bg-color);
    color: var(--text-color);
  }

  .faq-column {
    flex: 1 1 60%;
    background-color: #fff;
    padding: 24px;
    border-radius: 12px;
  }

  .faq-column h2 {
    font-size: 26px;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .faq-column p {
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .faq-item {
    border-top: 1px solid #e5e5e5;
    padding: 16px 0;
    cursor: pointer;
  }

  .faq-item:last-child {
    border-bottom: 1px solid #e5e5e5;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    font-weight: 600;
    font-size: 17px;
  }

  .faq-answer {
    display: none;
    margin-top: 10px;
    font-size: 15px;
    color: var(--muted-color);
  }

  .faq-item.open .faq-answer {
    display: block;
  }

  .contact-column {
    flex: 1 1 35%;
  }

  .contact-box {
    background-color: #f9f9f9;
    border-radius: 12px;
    padding: 24px;
  }

  .contact-box h3 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .contact-box p {
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .contact-box input,
  .contact-box textarea {
    width: 100%;
    padding: 14px;
    margin-bottom: 14px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 15px;
  }

  .contact-box button {
    background-color: var(--button-bg);
    color: var(--button-text);
    padding: 12px 24px;
    border: none;
    border-radius: 25px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
  }

  .contact-box button:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .faq-contact-wrapper {
      flex-direction: column;
    }
  }
{% endstylesheet %}

<div
  class="faq-contact-wrapper"
  style="
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    --muted-color: {{ section.settings.text_muted }};
    --button-bg: {{ section.settings.button_bg }};
    --button-text: {{ section.settings.button_text }}
  "
>
  <!-- Left FAQ Column -->
  <div class="faq-column">
    <h2>{{ section.settings.faq_heading }}</h2>
    <p>{{ section.settings.faq_subtext }}</p>

    {% for block in section.blocks %}
      {% if block.type == 'faq' %}
        <div class="faq-item" onclick="this.classList.toggle('open')">
          <div class="faq-question">
            {{ block.settings.question }}
            <span>+</span>
          </div>
          <div class="faq-answer">{{ block.settings.answer }}</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Right Contact Form -->
  <div class="contact-column">
    <div class="contact-box">
      <h3>{{ section.settings.contact_heading }}</h3>
      <p>{{ section.settings.contact_subtext }}</p>

      <form method="post" action="/contact">
        <input type="text" name="contact[name]" placeholder="Name" required>
        <input type="email" name="contact[email]" placeholder="Email" required>
        <textarea name="contact[body]" rows="5" placeholder="Message" required></textarea>
        <button type="submit">{{ section.settings.button_label }}</button>
      </form>
    </div>
  </div>
</div>

