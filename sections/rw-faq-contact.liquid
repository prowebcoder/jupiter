{% stylesheet %}
  .faq-contact-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap);
    padding: var(--section-padding);
    background-color: var(--bg-color);
    color: var(--text-color);
  }

  .faq-column {
    flex: 1 1 60%;
    background-color: #fff;
    padding: var(--faq-padding);
    border-radius: 12px;
  }

  .faq-column h2 {
    font-size: var(--faq-heading-size);
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--faq-heading-color);
  }

  .faq-column p {
    font-size: var(--faq-subtext-size);
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .faq-item {
    border-top: 1px solid #e5e5e5;
    padding: var(--faq-item-padding);
    cursor: pointer;
  }

  .faq-item:last-child {
    border-bottom: 1px solid #e5e5e5;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    font-weight: 600;
    font-size: var(--faq-question-size);
    color: var(--faq-question-color);
  }

  .faq-answer {
    display: none;
    margin-top: 10px;
    font-size: var(--faq-answer-size);
    color: var(--faq-answer-color);
  }

  .faq-item.open .faq-answer {
    display: block;
  }

  .contact-column {
    flex: 1 1 35%;
  }

  .contact-box {
    background-color: #f9f9f9;
    border-radius: 12px;
    padding: var(--contact-padding);
  }

  .contact-box h3 {
    font-size: var(--contact-heading-size);
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--contact-heading-color);
  }

  .contact-box p {
    font-size: var(--contact-subtext-size);
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .contact-box input,
  .contact-box textarea {
    width: 100%;
    padding: 14px;
    margin-bottom: 14px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: var(--form-text-size);
    color: var(--form-text-color);
  }

  .contact-box button {
    background-color: var(--button-bg);
    color: var(--button-text);
    padding: 12px 24px;
    border: none;
    border-radius: 25px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
    font-size: var(--button-text-size);
  }

  .contact-box button:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .faq-contact-wrapper {
      flex-direction: column;
    }
  }
{% endstylesheet %}

<div
  class="faq-contact-wrapper"
  style="
    --section-padding: {{ section.settings.section_padding }};
    --gap: {{ section.settings.column_gap }};
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    --muted-color: {{ section.settings.text_muted }};

    --faq-padding: {{ section.settings.faq_padding }};
    --faq-heading-size: {{ section.settings.faq_heading_size }};
    --faq-heading-color: {{ section.settings.faq_heading_color }};
    --faq-subtext-size: {{ section.settings.faq_subtext_size }};

    --faq-item-padding: {{ section.settings.faq_item_padding }};
    --faq-question-size: {{ section.settings.faq_question_size }};
    --faq-question-color: {{ section.settings.faq_question_color }};
    --faq-answer-size: {{ section.settings.faq_answer_size }};
    --faq-answer-color: {{ section.settings.faq_answer_color }};

    --contact-padding: {{ section.settings.contact_padding }};
    --contact-heading-size: {{ section.settings.contact_heading_size }};
    --contact-heading-color: {{ section.settings.contact_heading_color }};
    --contact-subtext-size: {{ section.settings.contact_subtext_size }};

    --form-text-size: {{ section.settings.form_text_size }};
    --form-text-color: {{ section.settings.form_text_color }};
    --button-bg: {{ section.settings.button_bg }};
    --button-text: {{ section.settings.button_text }};
    --button-text-size: {{ section.settings.button_text_size }};
  "
>
  <!-- FAQ Column -->
  <div class="faq-column">
    <h2>{{ section.settings.faq_heading }}</h2>
    <p>{{ section.settings.faq_subtext }}</p>

    {% for block in section.blocks %}
      {% if block.type == 'faq' %}
        <div class="faq-item" onclick="this.classList.toggle('open')">
          <div class="faq-question">
            {{ block.settings.question }}
            <span>+</span>
          </div>
          <div class="faq-answer">{{ block.settings.answer }}</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Contact Column -->
  <div class="contact-column">
    <div class="contact-box">
      <h3>{{ section.settings.contact_heading }}</h3>
      <p>{{ section.settings.contact_subtext }}</p>

      <form method="post" action="/contact">
        <input type="text" name="contact[name]" placeholder="Name" required>
        <input type="email" name="contact[email]" placeholder="Email" required>
        <textarea name="contact[body]" rows="5" placeholder="Message" required></textarea>
        <button type="submit">{{ section.settings.button_label }}</button>
      </form>
    </div>
  </div>
</div>

