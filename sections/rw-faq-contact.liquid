{% stylesheet %}
  .faq-contact-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap, 40px);
    padding: var(--padding-y, 40)px var(--padding-x, 20)px;
    margin: var(--margin-y, 0)px var(--margin-x, auto);
    background-color: var(--bg-color);
    color: var(--text-color);
  }

  .faq-column {
    flex: 1 1 60%;
    background-color: var(--faq-bg);
    padding: var(--faq-padding, 24)px;
    margin: var(--faq-box-margin, 0)px;
    border: var(--border-width, 1)px solid var(--border-color);
    border-radius: var(--border-radius, 12)px;
  }

  .faq-column h2 {
    font-size: var(--faq-heading-size, 26)px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--faq-heading-color);
  }

  .faq-column p {
    font-size: var(--faq-subtext-size, 15)px;
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .faq-item {
    border-top: 1px solid var(--border-color);
    padding: var(--faq-item-padding, 16)px 0;
    cursor: pointer;
  }

  .faq-item:last-child {
    border-bottom: 1px solid var(--border-color);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    font-weight: 600;
    font-size: var(--faq-question-size, 17)px;
    color: var(--faq-question-color);
  }

  .faq-answer {
    display: none;
    margin-top: 10px;
    font-size: var(--faq-answer-size, 15)px;
    color: var(--faq-answer-color);
  }

  .faq-item.open .faq-answer {
    display: block;
  }

  .contact-column {
    flex: 1 1 35%;
  }

  .contact-box {
    background-color: var(--contact-bg);
    border-radius: var(--border-radius, 12)px;
    padding: var(--contact-padding, 24)px;
    margin: var(--contact-box-margin, 0)px;
    border: var(--border-width, 1)px solid var(--border-color);
  }

  .contact-box h3 {
    font-size: var(--contact-heading-size, 22)px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--contact-heading-color);
  }

  .contact-box p {
    font-size: var(--contact-subtext-size, 15)px;
    color: var(--muted-color);
    margin-bottom: 20px;
  }

  .contact-box input,
  .contact-box textarea {
    width: 100%;
    padding: 14px;
    margin-bottom: 14px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: var(--form-text-size, 15)px;
    color: var(--form-text-color);
  }

  .contact-box button {
    background-color: var(--button-bg);
    color: var(--button-text);
    padding: 12px 24px;
    border: none;
    border-radius: 25px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
    font-size: var(--button-text-size, 15)px;
  }

  .contact-box button:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .faq-contact-wrapper {
      flex-direction: column;
      padding: var(--mobile-padding-y, 24)px var(--mobile-padding-x, 16)px;
    }
    .faq-column,
    .contact-column {
      flex: 1 1 100%;
    }
  }
{% endstylesheet %}

<div
  class="faq-contact-wrapper"
  style="
    --padding-x: {{ section.settings.padding_x }};
    --padding-y: {{ section.settings.padding_y }};
    --margin-x: {{ section.settings.margin_x }};
    --margin-y: {{ section.settings.margin_y }};
    --mobile-padding-x: {{ section.settings.mobile_padding_x }};
    --mobile-padding-y: {{ section.settings.mobile_padding_y }};
    --gap: {{ section.settings.column_gap }};
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    --muted-color: {{ section.settings.text_muted }};
    --border-radius: {{ section.settings.border_radius }};
    --border-width: {{ section.settings.border_width }};
    --border-color: {{ section.settings.border_color }};
    --faq-padding: {{ section.settings.faq_padding }};
    --faq-box-margin: {{ section.settings.faq_box_margin }};
    --faq-bg: {{ section.settings.faq_bg_color }};
    --faq-heading-size: {{ section.settings.faq_heading_size }};
    --faq-heading-color: {{ section.settings.faq_heading_color }};
    --faq-subtext-size: {{ section.settings.faq_subtext_size }};
    --faq-item-padding: {{ section.settings.faq_item_padding }};
    --faq-question-size: {{ section.settings.faq_question_size }};
    --faq-question-color: {{ section.settings.faq_question_color }};
    --faq-answer-size: {{ section.settings.faq_answer_size }};
    --faq-answer-color: {{ section.settings.faq_answer_color }};
    --contact-padding: {{ section.settings.contact_padding }};
    --contact-box-margin: {{ section.settings.contact_box_margin }};
    --contact-bg: {{ section.settings.contact_bg_color }};
    --contact-heading-size: {{ section.settings.contact_heading_size }};
    --contact-heading-color: {{ section.settings.contact_heading_color }};
    --contact-subtext-size: {{ section.settings.contact_subtext_size }};
    --form-text-size: {{ section.settings.form_text_size }};
    --form-text-color: {{ section.settings.form_text_color }};
    --button-bg: {{ section.settings.button_bg }};
    --button-text: {{ section.settings.button_text }};
    --button-text-size: {{ section.settings.button_text_size }};
  "
>
  <div class="faq-column">
    <h2>{{ section.settings.faq_heading }}</h2>
    <p>{{ section.settings.faq_subtext }}</p>
    {% for block in section.blocks %}
      {% if block.type == 'faq' %}
        <div class="faq-item" onclick="this.classList.toggle('open')">
          <div class="faq-question">{{ block.settings.question }}</div>
          <div class="faq-answer">{{ block.settings.answer }}</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="contact-column">
    <div class="contact-box">
      <h3>{{ section.settings.contact_heading }}</h3>
      <p>{{ section.settings.contact_subtext }}</p>
      <form method="post" action="/contact">
        <input type="text" name="contact[name]" placeholder="Your name" required>
        <input type="email" name="contact[email]" placeholder="Your email" required>
        <textarea name="contact[body]" rows="4" placeholder="Your message" required></textarea>
        <button type="submit">{{ section.settings.button_label }}</button>
      </form>
    </div>
  </div>
</div>

