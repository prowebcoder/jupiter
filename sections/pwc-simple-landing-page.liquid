  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ sec_id }}';
    const faqQuestions = document.querySelectorAll(`${sectionId} .pc-faq-question`);
    
    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        answer.classList.toggle('active');
        
        const icon = question.querySelector('svg');
        if (answer.classList.contains('active')) {
          icon.style.transform = 'rotate(180deg)';
        } else {
          icon.style.transform = 'rotate(0deg)';
        }
      });
    });

    // Handle product form submission
document.querySelectorAll('.pc-featured-product__form').forEach(form => {
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const submitButton = this.querySelector('[type="submit"]');
    const originalText = submitButton.textContent;
    
    // Disable button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = 'Adding...';
    
    fetch('/cart/add.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(response => {
      // Update cart count
      fetch('/cart.js')
        .then(res => res.json())
        .then(cart => {
          // Update cart count in header if needed
          const cartCountElements = document.querySelectorAll('.cart-count');
          if (cartCountElements) {
            cartCountElements.forEach(el => {
              el.textContent = cart.item_count;
            });
          }
        });
      
      // Show success message
      submitButton.textContent = 'Added to Cart!';
      setTimeout(() => {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
      }, 2000);
    })
    .catch(error => {
      console.error('Error:', error);
      submitButton.textContent = 'Error!';
      setTimeout(() => {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
      }, 2000);
    });
  });
});
</script>

