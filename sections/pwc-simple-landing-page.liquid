{%- assign sec_id = '#shopify-section-' | append: section.id -%}

<style>
    {{ sec_id }} {
      --pc-section-padding-top: {{ section.settings.desktop_padding_top }}px;
      --pc-section-padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      --pc-section-margin-top: {{ section.settings.desktop_margin_top }}px;
      --pc-section-margin-bottom: {{ section.settings.desktop_margin_bottom }}px;
      --pc-section-bg-color: {{ section.settings.background_color }};
      --pc-section-padding-left: {{ section.settings.desktop_padding_left }}px;
      --pc-section-padding-right: {{ section.settings.desktop_padding_right }}px;
      --pc-section-margin-left: {{ section.settings.desktop_margin_left }}px;
      --pc-section-margin-right: {{ section.settings.desktop_margin_right }}px;
      --pc-section-text-color: {{ section.settings.text_color }};
      {% if section.settings.shadow_enabled %}
      --pc-section-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      {% else %}
      --pc-section-shadow: none;
      {% endif %}
    }

    {{ sec_id }} .pc-landing-section {
      padding-top: var(--pc-section-padding-top);
      padding-bottom: var(--pc-section-padding-bottom);
      padding-left: var(--pc-section-padding-left);
      padding-right: var(--pc-section-padding-left);
      margin-top: var(--pc-section-margin-top);
      margin-bottom: var(--pc-section-margin-bottom);
      margin-left: var(--pc-section-margin-left);
      margin-right: var(--pc-section-margin-left);
      background-color: var(--pc-section-bg-color);
      color: var(--pc-section-text-color);
      box-shadow: var(--pc-section-shadow);
    }

    {{ sec_id }} .pc-container {
      max-width: {{ section.settings.container_width }}px;
      margin: 0 auto;
      padding: 0 15px;
    }

    {{ sec_id }} .pc-block-container {
      position: relative;
      padding: 30px;
      margin-bottom: 30px;
      border-radius: {{ section.settings.block_border_radius }}px;
    }

    /* Container width classes */
    {{ sec_id }} .pc-block-container--full {
      width: 100%;
      max-width: 100%;
    }
    {{ sec_id }} .pc-block-container--large {
      width: 90%;
      max-width: 1400px;
      margin-left: auto;
      margin-right: auto;
    }
    {{ sec_id }} .pc-block-container--medium {
      width: 80%;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
    {{ sec_id }} .pc-block-container--small {
      width: 70%;
      max-width: 1000px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Banner Styles */
    {{ sec_id }} .pc-banner-container {
      position: relative;
      width: 100%;
      overflow: hidden;
      border-radius: {{ section.settings.banner_border_radius }}px;
    }

    {{ sec_id }} .pc-banner-image {
      width: 100%;
      height: auto;
      display: block;
      transition: transform 0.3s ease;
    }

    {{ sec_id }} .pc-banner-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      width: 100%;
      padding: 20px;
    }

    {{ sec_id }} .pc-banner-title {
      font-size: {{ section.settings.banner_title_size }}px;
      font-weight: {{ section.settings.banner_title_weight }};
      margin-bottom: 15px;
    }

    {{ sec_id }} .pc-banner-subtitle {
      font-size: {{ section.settings.banner_subtitle_size }}px;
      margin-bottom: 20px;
    }

    {{ sec_id }} .pc-banner-button {
      display: inline-block;
      padding: 12px 24px;
      background-color: {{ section.settings.banner_button_bg }};
      color: {{ section.settings.banner_button_text }};
      border-radius: {{ section.settings.banner_button_radius }}px;
      text-decoration: none;
      font-weight: {{ section.settings.banner_button_weight }};
      transition: all 0.3s ease;
    }

    {{ sec_id }} .pc-banner-button:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    /* Featured Product Styles */
    {{ sec_id }} .pc-featured-product {
      width: 100%;
      margin: 0 auto;
      padding: 2rem 0;
    }

    {{ sec_id }} .pc-featured-product__inner {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 3rem;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Image Width Classes */
    {{ sec_id }} .pc-featured-product--image-small .pc-featured-product__media {
      flex: 0 0 40%;
    }
    {{ sec_id }} .pc-featured-product--image-medium .pc-featured-product__media {
      flex: 0 0 50%;
    }
    {{ sec_id }} .pc-featured-product--image-large .pc-featured-product__media {
      flex: 0 0 60%;
    }

    {{ sec_id }} .pc-featured-product__content {
      flex: 1;
      min-width: 300px;
    }

    /* Image Position */
    {{ sec_id }} .pc-featured-product--image-right .pc-featured-product__inner {
      flex-direction: row-reverse;
    }

    /* Media Styles */
    {{ sec_id }} .pc-featured-product__image {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 4px;
    }

    /* Text Alignment */
    {{ sec_id }} .pc-featured-product--text-left .pc-featured-product__content {
      text-align: left;
    }
    {{ sec_id }} .pc-featured-product--text-center .pc-featured-product__content {
      text-align: center;
    }
    {{ sec_id }} .pc-featured-product--text-right .pc-featured-product__content {
      text-align: right;
    }

    /* Content Styles */
    {{ sec_id }} .pc-featured-product__vendor {
      color: #666;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }

    {{ sec_id }} .pc-featured-product__title {
      margin-top: 0;
      margin-bottom: 1rem;
      font-size: 1.8rem;
    }

    {{ sec_id }} .pc-featured-product__price {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
    }

    {{ sec_id }} .pc-featured-product__compare-price {
      color: #999;
      margin-left: 0.5rem;
      text-decoration: line-through;
      font-weight: normal;
    }

    {{ sec_id }} .pc-featured-product__description {
      margin-bottom: 2rem;
      line-height: 1.6;
      color: #555;
    }

    /* Rating Styles */
    {{ sec_id }} .pc-featured-product__rating {
      display: flex;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    {{ sec_id }} .pc-featured-product__rating-stars {
      color: #FFD700;
      margin-right: 8px;
      font-size: 18px;
    }

    {{ sec_id }} .pc-featured-product__rating-value {
      font-size: 14px;
      margin-right: 15px;
    }

    {{ sec_id }} .pc-featured-product__rating-info {
      display: flex;
      gap: 15px;
    }

    {{ sec_id }} .pc-featured-product__rating-item {
      display: flex;
      align-items: center;
      font-size: 14px;
    }

    {{ sec_id }} .pc-featured-product__rating-item strong {
      margin-right: 5px;
    }

    /* Form Styles */
    {{ sec_id }} .pc-featured-product__form-actions {
      margin-bottom: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    {{ sec_id }} .pc-featured-product__quantity {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    {{ sec_id }} .pc-featured-product__quantity label {
      font-size: 0.9rem;
    }

    {{ sec_id }} .pc-featured-product__quantity-input {
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      max-width: 100px;
    }

    {{ sec_id }} .pc-featured-product__add-to-cart {
      border: none;
      padding: 1rem 2rem;
      cursor: pointer;
      width: 100%;
      font-weight: bold;
      border-radius: 4px;
      transition: opacity 0.2s;
    }

    {{ sec_id }} .pc-featured-product__add-to-cart:hover {
      opacity: 0.9;
    }

    {{ sec_id }} .pc-featured-product__add-to-cart[disabled] {
      background-color: #ccc !important;
      cursor: not-allowed;
    }

    {{ sec_id }} .pc-featured-product__payment-button {
      margin-top: 1rem;
    }

    {{ sec_id }} .pc-featured-product__view-details {
      display: inline-block;
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid currentColor;
      padding-bottom: 2px;
      transition: border-color 0.2s;
    }

    {{ sec_id }} .pc-featured-product__view-details:hover {
      border-bottom-color: transparent;
    }

    /* Rich Text Styles */
    {{ sec_id }} .pc-rich-text {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      text-align: {{ section.settings.rich_text_align }};
    }

    {{ sec_id }} .pc-rich-text h2 {
      font-size: {{ section.settings.rich_text_heading_size }}px;
      margin-bottom: 15px;
    }

    {{ sec_id }} .pc-rich-text p {
      font-size: {{ section.settings.rich_text_paragraph_size }}px;
      line-height: 1.6;
    }

    /* FAQ Styles */
    {{ sec_id }} .pc-faq-container {
      max-width: 800px;
      margin: 0 auto;
    }

    {{ sec_id }} .pc-faq-item {
      margin-bottom: 15px;
      border-bottom: 1px solid #e0e0e0;
      padding-bottom: 15px;
    }

    {{ sec_id }} .pc-faq-question {
      font-size: {{ section.settings.faq_question_size }}px;
      font-weight: {{ section.settings.faq_question_weight }};
      margin-bottom: 10px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    {{ sec_id }} .pc-faq-answer {
      font-size: {{ section.settings.faq_answer_size }}px;
      display: none;
      padding-top: 10px;
    }

    {{ sec_id }} .pc-faq-answer.active {
      display: block;
    }

    /* Image with Text Styles */
    {{ sec_id }} .pc-image-text {
      display: flex;
      align-items: center;
      gap: 30px;
      padding: 20px 0;
    }

    {{ sec_id }} .pc-image-text.reverse {
      flex-direction: row-reverse;
    }

    {{ sec_id }} .pc-image-text-image {
      flex: 1;
      border-radius: {{ section.settings.image_text_radius }}px;
      overflow: hidden;
    }

    {{ sec_id }} .pc-image-text-content {
      flex: 1;
    }

    {{ sec_id }} .pc-image-text-title {
      font-size: {{ section.settings.image_text_title_size }}px;
      margin-bottom: 15px;
    }

    {{ sec_id }} .pc-image-text-description {
      font-size: {{ section.settings.image_text_desc_size }}px;
      line-height: 1.6;
    }

    /* Text with Icons Styles */
    {{ sec_id }} .pc-icons-container {
      display: grid;
      gap: 30px;
      padding: 20px 0;
    }

    {{ sec_id }} .pc-icons-container--cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }
    {{ sec_id }} .pc-icons-container--cols-3 {
      grid-template-columns: repeat(3, 1fr);
    }
    {{ sec_id }} .pc-icons-container--cols-4 {
      grid-template-columns: repeat(4, 1fr);
    }

    {{ sec_id }} .pc-icon-item {
      text-align: center;
      padding: 20px;
      border-radius: 8px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    {{ sec_id }} .pc-icon-item:hover {
      transform: translateY(-5px);
    }

    {{ sec_id }} .pc-icon-image {
      width: 60px;
      height: 60px;
      margin: 0 auto 15px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    {{ sec_id }} .pc-icon-title {
      font-size: {{ section.settings.icon_title_size }}px;
      margin-bottom: 10px;
      font-weight: 600;
    }

    {{ sec_id }} .pc-icon-description {
      font-size: {{ section.settings.icon_desc_size }}px;
      line-height: 1.5;
    }

    /* Product Grid Styles */
    {{ sec_id }} .pc-products-grid {
      display: grid;
      grid-template-columns: repeat({{ section.settings.products_per_row }}, 1fr);
      gap: 20px;
      padding: 20px 0;
    }

    {{ sec_id }} .pc-product-card {
      border-radius: {{ section.settings.product_card_radius }}px;
      overflow: hidden;
      {% if section.settings.product_card_shadow %}
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      {% endif %}
    }

    {{ sec_id }} .pc-product-image {
      width: 100%;
      height: auto;
      display: block;
    }

    {{ sec_id }} .pc-product-info {
      padding: 15px;
      text-align: center;
    }

    {{ sec_id }} .pc-product-title {
      font-size: {{ section.settings.grid_product_title_size }}px;
      margin-bottom: 5px;
    }

    {{ sec_id }} .pc-product-price {
      font-size: {{ section.settings.grid_product_price_size }}px;
      color: {{ section.settings.grid_product_price_color }};
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      {{ sec_id }} {
        --pc-section-padding-top: {{ section.settings.mobile_padding_top }}px;
        --pc-section-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        --pc-section-margin-top: {{ section.settings.mobile_margin_top }}px;
        --pc-section-margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
      }

      {{ sec_id }} .pc-container {
        padding: 0 10px;
      }

      {{ sec_id }} .pc-block-container--large,
      {{ sec_id }} .pc-block-container--medium,
      {{ sec_id }} .pc-block-container--small {
        width: 100%;
        padding: 20px 15px;
      }

      {{ sec_id }} .pc-banner-title {
        font-size: {{ section.settings.mobile_banner_title_size }}px;
      }

      {{ sec_id }} .pc-banner-subtitle {
        font-size: {{ section.settings.mobile_banner_subtitle_size }}px;
      }

      {{ sec_id }} .pc-image-text {
        flex-direction: column;
      }

      {{ sec_id }} .pc-image-text.reverse {
        flex-direction: column;
      }

      {{ sec_id }} .pc-icons-container {
        grid-template-columns: 1fr !important;
      }

      {{ sec_id }} .pc-products-grid {
        grid-template-columns: repeat({{ section.settings.mobile_products_per_row }}, 1fr);
      }

      {{ sec_id }} .pc-featured-product__inner {
        flex-direction: column !important;
        gap: 2rem;
      }

      {{ sec_id }} .pc-featured-product__media,
      {{ sec_id }} .pc-featured-product__content {
        flex: 1 1 100% !important;
        width: 100%;
      }

      {{ sec_id }} .pc-featured-product__content {
        text-align: center !important;
      }

      {{ sec_id }} .pc-featured-product__form-actions {
        align-items: center;
      }

      {{ sec_id }} .pc-featured-product__quantity {
        align-items: center;
      }
    }
    /* Multicolumn Styles */
  {{ sec_id }} .pc-multicolumn {
    text-align: center;
    padding: 20px 0;
  }

  {{ sec_id }} .pc-multicolumn-heading {
    font-size: {{ section.settings.rich_text_heading_size }}px;
    margin-bottom: 15px;
  }

  {{ sec_id }} .pc-multicolumn-subheading {
    font-size: {{ section.settings.rich_text_paragraph_size }}px;
    margin-bottom: 30px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  {{ sec_id }} .pc-multicolumn-grid {
    display: grid;
    gap: 20px;
  }

  {{ sec_id }} .pc-multicolumn-grid--cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  {{ sec_id }} .pc-multicolumn-grid--cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  {{ sec_id }} .pc-multicolumn-grid--cols-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  {{ sec_id }} .pc-multicolumn-grid--cols-5 {
    grid-template-columns: repeat(5, 1fr);
  }

  {{ sec_id }} .pc-multicolumn-item {
    padding: 30px;
    border-radius: {{ block.settings.column_border_radius }}px;
    background-color: {{ block.settings.column_bg_color }};
    color: {{ block.settings.column_text_color }};
    {% if block.settings.column_shadow %}
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    {% endif %}
    transition: transform 0.3s ease;
  }

  {{ sec_id }} .pc-multicolumn-item:hover {
    transform: translateY(-5px);
  }

  {{ sec_id }} .pc-multicolumn-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  {{ sec_id }} .pc-multicolumn-icon svg {
    width: 100%;
    height: 100%;
  }

  {{ sec_id }} .pc-multicolumn-icon-image {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: block;
    object-fit: contain;
  }

  {{ sec_id }} .pc-multicolumn-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 15px;
  }

  {{ sec_id }} .pc-multicolumn-text {
    font-size: 16px;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-multicolumn-grid--cols-2,
    {{ sec_id }} .pc-multicolumn-grid--cols-3,
    {{ sec_id }} .pc-multicolumn-grid--cols-4,
    {{ sec_id }} .pc-multicolumn-grid--cols-5 {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    {{ sec_id }} .pc-multicolumn-item {
      padding: 20px;
    }

    {{ sec_id }} .pc-multicolumn-icon,
    {{ sec_id }} .pc-multicolumn-icon-image {
      width: 50px;
      height: 50px;
      margin-bottom: 15px;
    }

    {{ sec_id }} .pc-multicolumn-title {
      font-size: 16px;
    }

    {{ sec_id }} .pc-multicolumn-text {
      font-size: 14px;
    }
  }
</style>

<section class="pc-landing-section">
  <div class="pc-container">
    {% for block in section.blocks %}
      {%- assign block_bg_color = block.settings.background_color | default: 'transparent' -%}
      {%- assign block_text_color = block.settings.text_color | default: 'inherit' -%}

      <div
        class="pc-block-container pc-block-container--{{ block.settings.container_width }}"
        style="
          background-color: {{ block_bg_color }};
          color: {{ block_text_color }};
        "
        {{ block.shopify_attributes }}
      >
        {% case block.type %}
          {% when 'banner' %}
            <div class="pc-banner-container">
              {% if block.settings.image != blank %}
                {{-
                  block.settings.image
                  | image_url: width: block.settings.image.width, height: block.settings.image.height
                  | image_tag: loading: 'lazy', preload: true, alt: block.settings.image.alt, class: 'pc-banner-image'
                -}}
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'pc-banner-image' }}
              {% endif %}
              <div class="pc-banner-content">
                {% if block.settings.title != blank %}
                  <h2 class="pc-banner-title">{{ block.settings.title }}</h2>
                {% endif %}
                {% if block.settings.subtitle != blank %}
                  <p class="pc-banner-subtitle">{{ block.settings.subtitle }}</p>
                {% endif %}
                {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="pc-banner-button">
                    {{- block.settings.button_text -}}
                  </a>
                {% endif %}
              </div>
            </div>

          {% when 'featured_product' %}
            <div
              class="
                pc-featured-product
                pc-featured-product--image-{{ block.settings.image_position }}
                pc-featured-product--image-{{ block.settings.image_width }}
                pc-featured-product--text-{{ block.settings.text_alignment }}
              "
            >
              <div class="pc-featured-product__inner">
                {% assign product = block.settings.product %}

                {% if product != blank %}
                  <!-- Media Section -->
                  <div class="pc-featured-product__media">
                    {% if product.media != blank %}
                      <div class="pc-featured-product__media-container">
                        {% for media in product.media limit: 1 %}
                          {% case media.media_type %}
                            {% when 'image' %}
                              <img
                                src="{{ media | img_url: '800x' }}"
                                alt="{{ media.alt }}"
                                class="pc-featured-product__image"
                                loading="lazy"
                                width="{{ media.width }}"
                                height="{{ media.height }}"
                              >
                            {% when 'video' %}
                              <div class="pc-featured-product__video">
                                {{ media | video_tag: controls: true, loop: false, muted: true }}
                              </div>
                            {% when 'external_video' %}
                              <div class="pc-featured-product__video">
                                {{ media | external_video_tag }}
                              </div>
                            {% when 'model' %}
                              <div class="pc-featured-product__model">
                                {{ media | model_viewer_tag }}
                              </div>
                          {% endcase %}
                        {% endfor %}
                      </div>
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'pc-featured-product__image' }}
                    {% endif %}
                  </div>

                  <!-- Content Section -->
                  <div class="pc-featured-product__content">
                    {% if block.settings.show_vendor and product.vendor != blank %}
                      <p class="pc-featured-product__vendor">{{ product.vendor }}</p>
                    {% endif %}

                    <h2 class="pc-featured-product__title">{{ product.title }}</h2>

                    <div class="pc-featured-product__price">
                      {{ product.price | money }}
                      {% if product.compare_at_price > product.price %}
                        <s class="pc-featured-product__compare-price">{{ product.compare_at_price | money }}</s>
                      {% endif %}
                    </div>

                    {% if block.settings.show_description and product.description != blank %}
                      <div class="pc-featured-product__description">
                        {{ product.description | strip_html | truncatewords: block.settings.description_length }}
                      </div>
                    {% endif %}

                    {% form 'product', product, class: 'pc-featured-product__form', id: product_form_id %}
                      <div class="pc-featured-product__form-actions">
                        {% if block.settings.show_quantity_selector %}
                          <div class="pc-featured-product__quantity">
                            <label for="Quantity-{{ section.id }}">Quantity</label>
                            <input
                              type="number"
                              id="Quantity-{{ section.id }}"
                              name="quantity"
                              value="1"
                              min="1"
                              class="pc-featured-product__quantity-input"
                            >
                          </div>
                        {% endif %}

                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

                        <button
                          type="submit"
                          name="add"
                          class="pc-featured-product__add-to-cart"
                          style="
                            background-color: {{ block.settings.button_color }};
                            color: {{ block.settings.button_text_color }};
                          "
                        >
                          <span>Add to Cart</span>
                        </button>

                        {% if block.settings.enable_payment_button %}
                          <div class="pc-featured-product__payment-button">
                            {{ form | payment_button }}
                          </div>
                        {% endif %}
                      </div>
                    {% endform %}
                    {% if block.settings.show_rating %}
                      <div class="pc-featured-product__rating">
                        <div class="pc-featured-product__rating-stars">
