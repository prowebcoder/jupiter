{% assign sec_id = '#shopify-section-' | append: section.id %}

<style>
{{ sec_id }} .pc-highlighted-banner-wrapper {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background-color: {{ section.settings.bg_color }};
  padding: 60px 20px;
  gap: 40px;
  {% if section.settings.full_width == false %}
    max-width: 1200px;
    margin: 0 auto;
  {% endif %}
}

{{ sec_id }} .pc-left-image,
{{ sec_id }} .pc-right-content {
  flex: 1;
  min-width: 280px;
}

{{ sec_id }} .pc-left-image img {
  width: 100%;
  height: {{ section.settings.left_image_height }}px;
  object-fit: cover;
  border-radius: 8px;
}

{{ sec_id }} .pc-small-image img {
  width: 100%;
  height: {{ section.settings.small_image_height }}px;
  object-fit: cover;
  border-radius: 8px;
}

{{ sec_id }} .pc-subheading {
  font-size: {{ section.settings.subheading_size }}px;
  color: {{ section.settings.subheading_color }};
  margin-bottom: 10px;
}

{{ sec_id }} .pc-heading {
  font-size: {{ section.settings.heading_size }}px;
  color: {{ section.settings.heading_color }};
  font-weight: 600;
  margin-bottom: 20px;
  line-height: 1.4;
}

{{ sec_id }} .pc-button-wrapper {
  margin-top: 20px;
  text-align: {{ section.settings.button_alignment }};
}

{{ sec_id }} .pc-button {
  display: inline-block;
  padding: 12px 24px;
  background-color: {{ section.settings.button_bg }};
  color: {{ section.settings.button_color }};
  text-decoration: none;
  border-radius: {{ section.settings.button_radius }};
  font-size: 16px;
  transition: all 0.3s ease;
}

{{ sec_id }} .pc-button:hover {
  background-color: {{ section.settings.button_hover_bg }};
  color: {{ section.settings.button_hover_color }};
}

@media (max-width: 768px) {
  {{ sec_id }} .pc-highlighted-banner-wrapper {
    flex-direction: column;
    text-align: center;
  }

  {{ sec_id }} .pc-button-wrapper {
    text-align: center !important;
  }

  {{ sec_id }} .pc-small-image {
    margin: 0 auto;
  }
}
</style>

<div class="pc-highlighted-banner-wrapper">
  <div class="pc-left-image">
    {% if section.settings.left_image != blank %}
      <img src="{{ section.settings.left_image | image_url: width: 600 }}" alt="Banner Image">
    {% endif %}
  </div>
  <div class="pc-right-content">
    {% if section.settings.subheading != blank %}
      <div class="pc-subheading">{{ section.settings.subheading }}</div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <div class="pc-heading">{{ section.settings.heading }}</div>
    {% endif %}
    <div class="pc-small-image">
      {% if section.settings.small_image != blank %}
        <img src="{{ section.settings.small_image | image_url: width: 300 }}" alt="Small Bag">
      {% endif %}
    </div>
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="pc-button-wrapper">
        <a href="{{ section.settings.button_url }}" class="pc-button">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "RD Highlighter Banner",
  "tag": "section",
  "class": "pc-highlighted-banner-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Enable full width",
      "default": false
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#a3f29f"
    },
    {
      "type": "range",
      "id": "left_image_height",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Left Image Height",
      "default": 600
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Know about our mini bags"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Subheading Font Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Font Color",
      "default": "#1a1a1a"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "My lifeâ€™s journey is lighter with a shoulder bag."
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 32
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Font Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "small_image",
      "label": "Small Image"
    },
    {
      "type": "range",
      "id": "small_image_height",
      "min": 100,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Small Image Height",
      "default": 300
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_bg",
      "label": "Button Hover Background Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "button_radius",
      "label": "Button Shape",
      "options": [
        { "value": "4px", "label": "Rounded" },
        { "value": "24px", "label": "Pill" },
        { "value": "0px", "label": "Square" }
      ],
      "default": "4px"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "RD Highlighter Banner"
    }
  ]
}
{% endschema %}
